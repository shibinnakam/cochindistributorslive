{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  name: \"LoginPage\",\n  data() {\n    return {\n      isSignup: false,\n      email: \"\",\n      password: \"\",\n      isFilled: false\n    };\n  },\n  methods: {\n    toggleMode() {\n      this.isSignup = !this.isSignup;\n      this.email = \"\";\n      this.password = \"\";\n      this.isFilled = false;\n    },\n    checkFilled() {\n      this.isFilled = this.email.trim() !== \"\" && this.password.trim() !== \"\";\n    },\n    async handleSubmit() {\n      try {\n        const endpoint = this.isSignup ? \"/api/auth/register\" : \"/api/auth/login\";\n        const res = await axios.post(endpoint, {\n          email: this.email,\n          password: this.password\n        });\n        if (this.isSignup) {\n          alert(\"Registered successfully. Please login.\");\n          this.toggleMode();\n        } else {\n          localStorage.setItem(\"token\", res.data.token);\n          alert(\"Login successful!\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        console.error(\"Login/Register error:\", err);\n        alert(err.response?.data?.msg || err.message || \"An error occurred.\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","isSignup","email","password","isFilled","methods","toggleMode","checkFilled","trim","handleSubmit","endpoint","res","post","alert","localStorage","setItem","token","$router","push","err","console","error","response","msg","message"],"sources":["C:\\Users\\LENOVO\\Music\\distribution-agency-project\\frontend\\src\\views\\Login.vue"],"sourcesContent":["<template>\n  <div class=\"login-container\">\n    <!-- Left: Login/Signup Form -->\n    <div class=\"login-form-section\">\n      <div :class=\"['login-box', isFilled ? 'box-filled' : '']\">\n        <img src=\"@/assets/logo.jpeg\" alt=\"Logo\" class=\"logo\" />\n        <h2 class=\"form-title\">{{ isSignup ? \"Sign Up\" : \"Login\" }}</h2>\n        <p class=\"signup-link\">\n          {{ isSignup ? \"Already have an account?\" : \"Don’t have an account?\" }}\n          <a href=\"#\" @click.prevent=\"toggleMode\">\n            {{ isSignup ? \"Login\" : \"Create an account\" }}\n          </a>\n        </p>\n\n        <form\n          class=\"login-form\"\n          @submit.prevent=\"handleSubmit\"\n          @input=\"checkFilled\"\n        >\n          <input\n            type=\"email\"\n            id=\"email\"\n            v-model=\"email\"\n            placeholder=\"Enter email\"\n            required\n          />\n\n          <input\n            type=\"password\"\n            id=\"password\"\n            v-model=\"password\"\n            placeholder=\"Enter password\"\n            required\n          />\n\n          <a v-if=\"!isSignup\" href=\"#\" class=\"forgot-password\">\n            Forgot your password?\n          </a>\n\n          <button type=\"submit\" class=\"login-button\">\n            {{ isSignup ? \"Sign Up\" : \"Login\" }}\n          </button>\n        </form>\n\n        <footer class=\"form-footer\">\n          <small>© 2025 YourCompany. All rights reserved.</small>\n        </footer>\n      </div>\n    </div>\n\n    <!-- Right: Info Section -->\n    <div class=\"info-section\">\n      <img\n        src=\"@/assets/login-bg.jpg\"\n        alt=\"Background\"\n        class=\"background-image\"\n      />\n      <div class=\"paper-card\">\n        <h2>Spin Your Way to Higher Conversions Today!</h2>\n        <p>\n          Boost conversions, grow subscribers, reduce cart abandonment with\n          Coupon Wheels.\n        </p>\n        <p><em>Available on OptinMonster Growth plans.</em></p>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"LoginPage\",\n  data() {\n    return {\n      isSignup: false,\n      email: \"\",\n      password: \"\",\n      isFilled: false,\n    };\n  },\n  methods: {\n    toggleMode() {\n      this.isSignup = !this.isSignup;\n      this.email = \"\";\n      this.password = \"\";\n      this.isFilled = false;\n    },\n    checkFilled() {\n      this.isFilled = this.email.trim() !== \"\" && this.password.trim() !== \"\";\n    },\n    async handleSubmit() {\n      try {\n        const endpoint = this.isSignup\n          ? \"/api/auth/register\"\n          : \"/api/auth/login\";\n\n        const res = await axios.post(endpoint, {\n          email: this.email,\n          password: this.password,\n        });\n\n        if (this.isSignup) {\n          alert(\"Registered successfully. Please login.\");\n          this.toggleMode();\n        } else {\n          localStorage.setItem(\"token\", res.data.token);\n          alert(\"Login successful!\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        console.error(\"Login/Register error:\", err);\n        alert(err.response?.data?.msg || err.message || \"An error occurred.\");\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n.login-container {\n  display: flex;\n  height: 100vh;\n  font-family: \"Segoe UI\", sans-serif;\n}\n\n.login-form-section {\n  width: 50%;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  background-color: #f8f9fa;\n}\n\n.login-box {\n  width: 80%;\n  max-width: 350px;\n  background-color: #ffffff;\n  padding: 2rem;\n  border-radius: 10px;\n  border: 2px solid #ccc; /* Default border */\n  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);\n  transition: border 0.3s ease, box-shadow 0.3s ease;\n}\n\n.box-filled {\n  border-color: #3b82f6; /* Blue border when filled */\n  box-shadow: 0 6px 25px rgba(59, 130, 246, 0.2);\n}\n\n.logo {\n  display: block;\n  margin: 0 auto 1rem auto;\n  height: 60px;\n}\n\n.form-title {\n  text-align: center;\n  font-size: 1.6rem;\n  margin-bottom: 0.5rem;\n}\n\n.signup-link {\n  text-align: center;\n  font-size: 0.9rem;\n  margin-bottom: 1.5rem;\n}\n\n.signup-link a {\n  color: #007bff;\n  text-decoration: none;\n  cursor: pointer;\n}\n\n.login-form input {\n  width: 100%;\n  padding: 0.5rem;\n  margin-bottom: 1rem;\n  border: 1px solid #ced4da;\n  border-radius: 5px;\n}\n\n.login-form input:focus {\n  outline: none;\n  border-color: #3b82f6; /* Blue on focus */\n  box-shadow: 0 0 5px rgba(59, 130, 246, 0.4);\n}\n\n.forgot-password {\n  font-size: 0.85rem;\n  color: #007bff;\n  text-decoration: none;\n  display: block;\n  margin-bottom: 1rem;\n}\n\n.login-button {\n  width: 100%;\n  background-color: #1e3a8a;\n  color: white;\n  border: none;\n  padding: 0.6rem;\n  border-radius: 5px;\n  font-weight: bold;\n  cursor: pointer;\n  transition: background 0.3s ease;\n}\n\n.login-button:hover {\n  background-color: #1d4ed8;\n}\n\n.form-footer {\n  text-align: center;\n  margin-top: 1rem;\n  font-size: 0.8rem;\n  color: #6c757d;\n}\n\n.info-section {\n  width: 50%;\n  position: relative;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  overflow: hidden;\n}\n\n.background-image {\n  position: absolute;\n  inset: 0;\n  object-fit: cover;\n  width: 100%;\n  height: 100%;\n  z-index: 1;\n  filter: brightness(0.9);\n}\n\n.paper-card {\n  position: relative;\n  z-index: 2;\n  width: 80%;\n  max-width: 500px;\n  background-color: white;\n  padding: 2rem;\n  border-radius: 12px;\n  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);\n  backdrop-filter: blur(6px);\n}\n\n.paper-card h2 {\n  font-size: 1.5rem;\n  margin-bottom: 1rem;\n  color: #111827;\n}\n\n.paper-card p {\n  font-size: 1rem;\n  line-height: 1.6;\n  color: #374151;\n}\n</style>\n"],"mappings":";AAsEA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,KAAK;MACfC,KAAK,EAAE,EAAE;MACTC,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE;IACZ,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAI,CAACL,QAAO,GAAI,CAAC,IAAI,CAACA,QAAQ;MAC9B,IAAI,CAACC,KAAI,GAAI,EAAE;MACf,IAAI,CAACC,QAAO,GAAI,EAAE;MAClB,IAAI,CAACC,QAAO,GAAI,KAAK;IACvB