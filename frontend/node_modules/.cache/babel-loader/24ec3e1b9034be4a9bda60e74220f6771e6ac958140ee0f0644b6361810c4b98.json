rlay -->\n    <div v-if=\"showLogin\" class=\"overlay\" @click.self=\"closePopup\">\n      <div :class=\"['login-box', isFilled ? 'box-filled' : '']\">\n        <img src=\"@/assets/logo.jpeg\" alt=\"Logo\" class=\"logo\" />\n        <h2 class=\"form-title\">{{ isSignup ? \"Sign Up\" : \"Login\" }}</h2>\n        <p class=\"signup-link\">\n          {{ isSignup ? \"Already have an account?\" : \"Don’t have an account?\" }}\n          <a href=\"#\" @click.prevent=\"toggleMode\">\n            {{ isSignup ? \"Login\" : \"Create an account\" }}\n          </a>\n        </p>\n\n        <form\n          class=\"login-form\"\n          @submit.prevent=\"handleSubmit\"\n          @input=\"checkFilled\"\n        >\n          <input\n            type=\"email\"\n            id=\"email\"\n            v-model=\"email\"\n            placeholder=\"Enter email\"\n            required\n          />\n\n          <input\n            type=\"password\"\n            id=\"password\"\n            v-model=\"password\"\n            placeholder=\"Enter password\"\n            required\n          />\n\n          <a v-if=\"!isSignup\" href=\"#\" class=\"forgot-password\">\n            Forgot your password?\n          </a>\n\n          <button type=\"submit\" class=\"login-button\">\n            {{ isSignup ? \"Sign Up\" : \"Login\" }}\n          </button>\n        </form>\n\n        <footer class=\"form-footer\">\n          <small>© 2025 YourCompany. All rights reserved.</small>\n        </footer>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"LoginPage\",\n  data() {\n    return {\n      isSignup: false,\n      email: \"\",\n      password: \"\",\n      isFilled: false,\n      showLogin: false, // popup visibility\n    };\n  },\n  methods: {\n    toggleMode() {\n      this.isSignup = !this.isSignup;\n      this.email = \"\";\n      this.password = \"\";\n      this.isFilled = false;\n    },\n    checkFilled() {\n      this.isFilled = this.email.trim() !== \"\" && this.password.trim() !== \"\";\n    },\n    closePopup() {\n      this.showLogin = false;\n    },\n    async handleSubmit() {\n      try {\n        const endpoint = this.isSignup\n          ? \"/api/auth/register\"\n          : \"/api/auth/login\";\n\n        const res = await axios.post(endpoint, {\n          email: this.email,\n          password: this.password,\n        });\n\n        if (this.isSignup) {\n          alert(\"Registered successfully. Please login.\");\n          this.toggleMode();\n        } else {\n          localStorage.setItem(\"token\", res.data.token);\n          alert(\"Login successful!\");\n          this.$router.push(\"/admin\");\n        }\n        this.closePopup();\n      } catch (err) {\n        console.error(\"Login/Register error:\", err);\n        alert(err.response?.data?.msg || err.message || \"An error occurred.\");\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* Overlay for popup */\n.overlay {\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background: rgba(0, 0, 0, 0.5); /* dim background */\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  z-index: 1000;\n}\n\n/* Login Box Popup */\n.login-box {\n  max-width: 400px;\n  width: 100%;\n  background-color: rgba(255, 255, 255, 0.95);\n  padding: 2.5rem 3rem;\n  border-radius: 15px;\n  border: 2px solid rgba(0, 0, 0, 0.1);\n  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);\n  transition: border 0.3s ease, box-shadow 0.3s ease;\n}\n\n.box-filled {\n  border-color: #3b82f6;\n  box-shadow: 0 8px 30px rgba(59, 130, 246, 0.3);\n}\n\n.logo {\n  height: 60px;\n  margin-bottom: 1rem;\n  display: block;\n  margin-left: auto;\n  margin-right: auto;\n}\n\n.form-title {\n  text-align: center;\n  font-size: 1.6rem;\n  margin-bottom: 0.5rem;\n}\n\n.signup-link {\n  text-align: center;\n  font-size: 0.9rem;\n  margin-bottom: 1.5rem;\n}\n\n.signup-link a {\n  color: #007bff;\n  text-decoration: 