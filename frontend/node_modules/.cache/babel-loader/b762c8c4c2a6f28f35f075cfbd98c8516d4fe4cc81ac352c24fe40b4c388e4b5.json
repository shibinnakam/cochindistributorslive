{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.for-each.js\";\nimport axios from \"axios\";\nexport default {\n  name: \"ProductEdit\",\n  data() {\n    return {\n      form: {\n        name: \"\",\n        description: \"\",\n        originalPrice: null,\n        discountPrice: null,\n        quantity: null,\n        image: \"\" // keep old image\n      },\n      imageFile: null\n    };\n  },\n  async mounted() {\n    await this.fetchProduct();\n  },\n  methods: {\n    async fetchProduct() {\n      const id = this.$route.params.id;\n      try {\n        const res = await axios.get(`http://localhost:5000/api/products/getproduct/${id}`);\n        if (res.data.success) {\n          const product = res.data.product;\n          this.form = {\n            name: product.name,\n            description: product.description,\n            originalPrice: product.originalPrice,\n            discountPrice: product.discountPrice,\n            quantity: product.quantity,\n            image: product.image || \"\"\n          };\n        }\n      } catch (err) {\n        console.error(\"Error fetching product:\", err.response?.data || err.message);\n      }\n    },\n    handleFileUpload(e) {\n      this.imageFile = e.target.files[0];\n    },\n    async updateProduct() {\n      const id = this.$route.params.id;\n      try {\n        const formData = new FormData();\n\n        // ✅ Append only filled values\n        Object.keys(this.form).forEach(key => {\n          if (this.form[key] !== null && this.form[key] !== \"\") {\n            if (key !== \"image\") {\n              formData.append(key, this.form[key]);\n            }\n          }\n        });\n\n        // ✅ New image if chosen\n        if (this.imageFile) {\n          formData.append(\"image\", this.imageFile);\n        }\n        const res = await axios.put(`http://localhost:5000/api/products/updateproduct/${id}`, formData, {\n          headers: {\n            \"Content-Type\": \"multipart/form-data\"\n          }\n        });\n        if (res.data.success) {\n          alert(\"✅ Product updated successfully!\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        alert(\"❌ Error updating product\");\n        console.error(err.response?.data || err.message);\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","form","description","originalPrice","discountPrice","quantity","image","imageFile","mounted","fetchProduct","methods","id","$route","params","res","get","success","product","err","console","error","response","message","handleFileUpload","e","target","files","updateProduct","formData","FormData","Object","keys","forEach","key","append","put","headers","alert","$router","push"],"sources":["C:\\Users\\LENOVO\\Music\\OneDrive\\Pictures\\distribution-agency-project\\frontend\\src\\views\\ProductEdit.vue"],"sourcesContent":["<template>\n  <div class=\"form-wrapper\">\n    <div class=\"form-card\">\n      <h2 class=\"form-title\">Edit Product</h2>\n      <form @submit.prevent=\"updateProduct\" enctype=\"multipart/form-data\" class=\"form-grid\">\n        <!-- Row 1: Name & Quantity -->\n        <div class=\"form-group\">\n          <input v-model=\"form.name\" type=\"text\" placeholder=\"Item Name\" />\n        </div>\n        <div class=\"form-group\">\n          <input\n            v-model.number=\"form.quantity\"\n            type=\"number\"\n            min=\"0\"\n            placeholder=\"Quantity\"\n          />\n        </div>\n\n        <!-- Row 2: Original Price & Discount Price -->\n        <div class=\"form-group\">\n          <input\n            v-model.number=\"form.originalPrice\"\n            type=\"number\"\n            placeholder=\"Original Price\"\n          />\n        </div>\n        <div class=\"form-group\">\n          <input\n            v-model.number=\"form.discountPrice\"\n            type=\"number\"\n            placeholder=\"Discount Price\"\n          />\n        </div>\n\n        <!-- Row 3: Description (Full Width) -->\n        <div class=\"form-group full-width\">\n          <textarea\n            v-model=\"form.description\"\n            placeholder=\"Description (4-20 chars)\"\n          ></textarea>\n        </div>\n\n        <!-- Row 4: File Upload -->\n        <div class=\"form-group full-width\">\n          <input\n            id=\"image\"\n            type=\"file\"\n            @change=\"handleFileUpload\"\n            accept=\"image/*\"\n          />\n        </div>\n\n        <!-- Current Image Preview -->\n        <div v-if=\"form.image && !imageFile\" class=\"image-preview-container\">\n          <img :src=\"getImageUrl(form.image)\" alt=\"Current Product\" class=\"image-preview\" />\n        </div>\n\n        <!-- New Image Preview -->\n        <div v-if=\"newImagePreview\" class=\"image-preview-container\">\n          <img :src=\"newImagePreview\" alt=\"New Preview\" class=\"image-preview\" />\n        </div>\n\n        <!-- Row 5: Submit Button (Full Width) -->\n        <div class=\"form-group full-width button-group\">\n          <button type=\"submit\" :disabled=\"loading\" class=\"btn-submit\">\n            {{ loading ? \"Updating...\" : \"Update Product\" }}\n          </button>\n        </div>\n      </form>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"ProductEdit\",\n  data() {\n    return {\n      form: {\n        name: \"\",\n        description: \"\",\n        originalPrice: null,\n        discountPrice: null,\n        quantity: null,\n        image: \"\", // keep old image\n      },\n      imageFile: null,\n    };\n  },\n  async mounted() {\n    await this.fetchProduct();\n  },\n  methods: {\n    async fetchProduct() {\n      const id = this.$route.params.id;\n      try {\n        const res = await axios.get(\n          `http://localhost:5000/api/products/getproduct/${id}`\n        );\n        if (res.data.success) {\n          const product = res.data.product;\n          this.form = {\n            name: product.name,\n            description: product.description,\n            originalPrice: product.originalPrice,\n            discountPrice: product.discountPrice,\n            quantity: product.quantity,\n            image: product.image || \"\",\n          };\n        }\n      } catch (err) {\n        console.error(\n          \"Error fetching product:\",\n          err.response?.data || err.message\n        );\n      }\n    },\n    handleFileUpload(e) {\n      this.imageFile = e.target.files[0];\n    },\n    async updateProduct() {\n      const id = this.$route.params.id;\n      try {\n        const formData = new FormData();\n\n        // ✅ Append only filled values\n        Object.keys(this.form).forEach((key) => {\n          if (this.form[key] !== null && this.form[key] !== \"\") {\n            if (key !== \"image\") {\n              formData.append(key, this.form[key]);\n            }\n          }\n        });\n\n        // ✅ New image if chosen\n        if (this.imageFile) {\n          formData.append(\"image\", this.imageFile);\n        }\n\n        const res = await axios.put(\n          `http://localhost:5000/api/products/updateproduct/${id}`,\n          formData,\n          { headers: { \"Content-Type\": \"multipart/form-data\" } }\n        );\n\n        if (res.data.success) {\n          alert(\"✅ Product updated successfully!\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        alert(\"❌ Error updating product\");\n        console.error(err.response?.data || err.message);\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n.edit-wrapper {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  padding: 30px;\n}\n\n.form-card {\n  background: #fff;\n  padding: 25px 30px;\n  border-radius: 12px;\n  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);\n  width: 450px;\n}\n.btn-back {\n  width: 100%;\n  padding: 12px;\n  border: none;\n  background: #6c757d;\n  color: #fff;\n  font-weight: bold;\n  font-size: 15px;\n  border-radius: 8px;\n  cursor: pointer;\n  margin-top: 10px;\n  transition: 0.3s;\n}\n\n.btn-back:hover {\n  background: #5a6268;\n}\n\nh2 {\n  text-align: center;\n  margin-bottom: 20px;\n  color: #333;\n}\n\n.form-group {\n  margin-bottom: 15px;\n}\n\nlabel {\n  display: block;\n  font-weight: 600;\n  margin-bottom: 6px;\n  color: #444;\n}\n\ninput,\ntextarea {\n  width: 100%;\n  padding: 10px 12px;\n  border: 1px solid #ddd;\n  border-radius: 8px;\n  font-size: 14px;\n}\n\ntextarea {\n  resize: none;\n  min-height: 70px;\n}\n\n.image-preview {\n  margin-bottom: 10px;\n}\n.image-preview img {\n  max-width: 120px;\n  border-radius: 6px;\n  border: 1px solid #ddd;\n}\n\n.btn-submit {\n  width: 100%;\n  padding: 12px;\n  border: none;\n  background: #007bff;\n  color: #fff;\n  font-weight: bold;\n  font-size: 15px;\n  border-radius: 8px;\n  cursor: pointer;\n  transition: 0.3s;\n}\n\n.btn-submit:hover {\n  background: #0056b3;\n}\n</style>\n"],"mappings":";;;AA0EA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE;QACJF,IAAI,EAAE,EAAE;QACRG,WAAW,EAAE,EAAE;QACfC,aAAa,EAAE,IAAI;QACnBC,aAAa,EAAE,IAAI;QACnBC,QAAQ,EAAE,IAAI;QACdC,KAAK,EAAE,EAAE,CAAE;MACb,CAAC;MACDC,SAAS,EAAE;IACb,CAAC;EACH,CAAC;EACD,MAAMC,OAAOA,CAAA,EAAG;IACd,MAAM,IAAI,CAACC,YAAY,CAAC,CAAC;EAC3B,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,YAAYA,CAAA,EAAG;MACnB,MAAME,EAAC,GAAI,IAAI,CAACC,MAAM,CAACC,MAAM,CAACF,EAAE;MAChC,IAAI;QACF,MAAMG,GAAE,GAAI,MAAMhB,KAAK,CAACiB,GAAG,CACzB,iDAAiDJ,EAAE,EACrD,CAAC;QACD,IAAIG,GAAG,CAACd,IAAI,CAACgB,OAAO,EAAE;UACpB,MAAMC,OAAM,GAAIH,GAAG,CAACd,IAAI,CAACiB,OAAO;UAChC,IAAI,CAAChB,IAAG,GAAI;YACVF,IAAI,EAAEkB,OAAO,CAAClB,IAAI;YAClBG,WAAW,EAAEe,OAAO,CAACf,WAAW;YAChCC,aAAa,EAAEc,OAAO,CAACd,aAAa;YACpCC,aAAa,EAAEa,OAAO,CAACb,aAAa;YACpCC,QAAQ,EAAEY,OAAO,CAACZ,QAAQ;YAC1BC,KAAK,EAAEW,OAAO,CAACX,