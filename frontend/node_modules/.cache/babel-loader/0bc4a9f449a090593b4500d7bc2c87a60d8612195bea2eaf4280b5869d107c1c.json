{"ast":null,"code":"import axios from \"axios\";\nimport socket from \"@/socket\";\nexport default {\n  name: \"OrdersPage\",\n  data() {\n    return {\n      orders: [],\n      loading: false\n    };\n  },\n  mounted() {\n    this.fetchOrders();\n    this.connectSocket();\n  },\n  beforeDestroy() {\n    socket.off('orderStatusUpdate');\n  },\n  methods: {\n    async fetchOrders() {\n      this.loading = true;\n      try {\n        const token = localStorage.getItem(\"token\");\n        const res = await axios.get(\"http://localhost:5000/api/orders/my-orders\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.orders = res.data;\n      } catch (err) {\n        console.error(\"Error fetching orders:\", err);\n      } finally {\n        this.loading = false;\n      }\n    },\n    getImageUrl(path) {\n      if (!path) return null;\n      return path.startsWith(\"/\") ? `http://localhost:5000${path}` : path;\n    },\n    formatDate(date) {\n      return new Date(date).toLocaleDateString(\"en-IN\", {\n        day: \"numeric\",\n        month: \"short\",\n        year: \"numeric\",\n        hour: \"2-digit\",\n        minute: \"2-digit\"\n      });\n    }\n  }\n};","map":{"version":3,"names":["axios","socket","name","data","orders","loading","mounted","fetchOrders","connectSocket","beforeDestroy","off","methods","token","localStorage","getItem","res","get","headers","Authorization","err","console","error","getImageUrl","path","startsWith","formatDate","date","Date","toLocaleDateString","day","month","year","hour","minute"],"sources":["C:\\Users\\LENOVO\\Music\\OneDrive\\Pictures\\distribution-agency-project\\frontend\\src\\views\\OrdersPage.vue"],"sourcesContent":["<template>\n  <div class=\"modal-overlay\" @click.self=\"$emit('close')\">\n    <div class=\"modal-content\">\n      <div class=\"modal-header\">\n        <h2>My Orders</h2>\n        <button class=\"close-btn\" @click=\"$emit('close')\">✕</button>\n      </div>\n\n      <div class=\"modal-body\">\n        <div v-if=\"loading\" class=\"loading\">\n          <div class=\"spinner\"></div>\n          <p>Loading orders...</p>\n        </div>\n\n        <div v-else-if=\"orders.length === 0\" class=\"empty-orders\">\n          <p>You haven't placed any orders yet!</p>\n          <button class=\"shop-now-btn\" @click=\"$emit('close')\">Shop Now</button>\n        </div>\n\n        <div v-else class=\"orders-list\">\n          <div v-for=\"order in orders\" :key=\"order._id\" class=\"order-card\">\n            <div class=\"order-header\">\n              <span class=\"order-id\">Order ID: {{ order._id }}</span>\n              <span class=\"order-date\">{{ formatDate(order.createdAt) }}</span>\n            </div>\n            <div class=\"order-items\">\n              <div\n                v-for=\"item in order.items\"\n                :key=\"item._id\"\n                class=\"order-item\"\n              >\n                <img\n                  :src=\"\n                    getImageUrl(item.product.image || item.product.imageFront)\n                  \"\n                  :alt=\"item.product.name\"\n                  class=\"item-img\"\n                />\n                <div class=\"item-info\">\n                  <h4>{{ item.product.name }}</h4>\n                  <p>Qty: {{ item.quantity }} | ₹{{ item.price }}</p>\n                </div>\n              </div>\n            </div>\n            <div class=\"order-footer\">\n              <span class=\"order-status\" :class=\"order.status\">{{\n                order.status\n              }}</span>\n              <span class=\"order-total\">Total: ₹{{ order.totalAmount }}</span>\n            </div>\n          </div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\nimport socket from \"@/socket\";\n\nexport default {\n  name: \"OrdersPage\",\n  data() {\n    return {\n      orders: [],\n      loading: false,\n    };\n  },\n  mounted() {\n    this.fetchOrders();\n    this.connectSocket();\n  },\n  beforeDestroy() {\n    socket.off('orderStatusUpdate');\n  },\n  methods: {\n    async fetchOrders() {\n      this.loading = true;\n      try {\n        const token = localStorage.getItem(\"token\");\n        const res = await axios.get(\n          \"http://localhost:5000/api/orders/my-orders\",\n          {\n            headers: { Authorization: `Bearer ${token}` },\n          }\n        );\n        this.orders = res.data;\n      } catch (err) {\n        console.error(\"Error fetching orders:\", err);\n      } finally {\n        this.loading = false;\n      }\n    },\n    getImageUrl(path) {\n      if (!path) return null;\n      return path.startsWith(\"/\") ? `http://localhost:5000${path}` : path;\n    },\n    formatDate(date) {\n      return new Date(date).toLocaleDateString(\"en-IN\", {\n        day: \"numeric\",\n        month: \"short\",\n        year: \"numeric\",\n        hour: \"2-digit\",\n        minute: \"2-digit\",\n      });\n    },\n  },\n};\n</script>\n\n<style scoped>\n.modal-overlay {\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background: rgba(0, 0, 0, 0.5);\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  z-index: 1001;\n}\n\n.modal-content {\n  background: white;\n  width: 95%;\n  max-width: 900px;\n  max-height: 90vh;\n  border-radius: 8px;\n  display: flex;\n  flex-direction: column;\n}\n\n.modal-header {\n  padding: 16px 24px;\n  border-bottom: 1px solid #f0f0f0;\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n}\n\n.modal-header h2 {\n  margin: 0;\n  color: #2874f0;\n}\n\n.close-btn {\n  background: none;\n  border: none;\n  font-size: 1.5rem;\n  cursor: pointer;\n}\n\n.modal-body {\n  padding: 24px;\n  overflow-y: auto;\n  flex: 1;\n}\n\n.order-card {\n  border: 1px solid #e0e0e0;\n  border-radius: 4px;\n  margin-bottom: 20px;\n  padding: 16px;\n}\n\n.order-header {\n  display: flex;\n  justify-content: space-between;\n  margin-bottom: 12px;\n  color: #878787;\n  font-size: 14px;\n}\n\n.order-items {\n  border-top: 1px solid #f0f0f0;\n  padding-top: 12px;\n}\n\n.order-item {\n  display: flex;\n  gap: 16px;\n  margin-bottom: 12px;\n}\n\n.item-img {\n  width: 60px;\n  height: 60px;\n  object-fit: contain;\n}\n\n.order-footer {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  border-top: 1px solid #f0f0f0;\n  padding-top: 12px;\n  margin-top: 12px;\n}\n\n.order-status {\n  text-transform: uppercase;\n  font-weight: 600;\n  font-size: 14px;\n}\n\n.order-status.ordered {\n  color: #2874f0;\n}\n.order-status.delivered {\n  color: #388e3c;\n}\n.order-status.cancelled {\n  color: #d32f2f;\n}\n\n.order-total {\n  font-weight: 600;\n  font-size: 18px;\n}\n\n.spinner {\n  border: 4px solid #f3f3f3;\n  border-top: 4px solid #2874f0;\n  border-radius: 50%;\n  width: 40px;\n  height: 40px;\n  animation: spin 1s linear infinite;\n  margin: 0 auto 16px;\n}\n\n@keyframes spin {\n  0% {\n    transform: rotate(0deg);\n  }\n  100% {\n    transform: rotate(360deg);\n  }\n}\n\n.loading,\n.empty-orders {\n  text-align: center;\n  padding: 40px;\n}\n\n.shop-now-btn {\n  background: #2874f0;\n  color: white;\n  border: none;\n  padding: 10px 30px;\n  border-radius: 2px;\n  cursor: pointer;\n  margin-top: 20px;\n}\n</style>\n"],"mappings":"AA0DA,OAAOA,KAAI,MAAO,OAAO;AACzB,OAAOC,MAAK,MAAO,UAAU;AAE7B,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,EAAE;MACVC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,WAAW,CAAC,CAAC;IAClB,IAAI,CAACC,aAAa,CAAC,CAAC;EACtB,CAAC;EACDC,aAAaA,CAAA,EAAG;IACdR,MAAM,CAACS,GAAG,CAAC,mBAAmB,CAAC;EACjC,CAAC;EACDC,OAAO,EAAE;IACP,MAAMJ,WAAWA,CAAA,EAAG;MAClB,IAAI,CAACF,OAAM,GAAI,IAAI;MACnB,IAAI;QACF,MAAMO,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMC,GAAE,GAAI,MAAMf,KAAK,CAACgB,GAAG,CACzB,4CAA4C,EAC5C;UACEC,OAAO,EAAE;YAAEC,aAAa,EAAE,UAAUN,KAAK;UAAG;QAC9C,