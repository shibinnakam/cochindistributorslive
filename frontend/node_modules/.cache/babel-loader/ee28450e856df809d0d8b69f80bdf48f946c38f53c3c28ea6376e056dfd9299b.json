{"ast":null,"code":"import axios from \"axios\";\nexport default {\n  name: \"OrdersPage\",\n  data() {\n    return {\n      orders: [],\n      loading: false\n    };\n  },\n  mounted() {\n    this.fetchOrders();\n  },\n  methods: {\n    async fetchOrders() {\n      this.loading = true;\n      try {\n        const token = localStorage.getItem(\"token\");\n        const res = await axios.get(\"http://localhost:5000/api/orders/my-orders\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.orders = res.data;\n      } catch (err) {\n        console.error(\"Error fetching orders:\", err);\n      } finally {\n        this.loading = false;\n      }\n    },\n    getImageUrl(path) {\n      if (!path) return null;\n      return path.startsWith(\"/\") ? `http://localhost:5000${path}` : path;\n    },\n    formatDate(date) {\n      return new Date(date).toLocaleDateString(\"en-IN\", {\n        day: \"numeric\",\n        month: \"short\",\n        year: \"numeric\",\n        hour: \"2-digit\",\n        minute: \"2-digit\"\n      });\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","orders","loading","mounted","fetchOrders","methods","token","localStorage","getItem","res","get","headers","Authorization","err","console","error","getImageUrl","path","startsWith","formatDate","date","Date","toLocaleDateString","day","month","year","hour","minute"],"sources":["C:\\Users\\LENOVO\\Music\\OneDrive\\Pictures\\distribution-agency-project\\frontend\\src\\views\\OrdersPage.vue"],"sourcesContent":["<template>\r\n  <div class=\"modal-overlay\" @click.self=\"$emit('close')\">\r\n    <div class=\"modal-content\">\r\n      <div class=\"modal-header\">\r\n        <h2>My Orders</h2>\r\n        <button class=\"close-btn\" @click=\"$emit('close')\">✕</button>\r\n      </div>\r\n\r\n      <div class=\"modal-body\">\r\n        <div v-if=\"loading\" class=\"loading\">\r\n          <div class=\"spinner\"></div>\r\n          <p>Loading orders...</p>\r\n        </div>\r\n\r\n        <div v-else-if=\"orders.length === 0\" class=\"empty-orders\">\r\n          <p>You haven't placed any orders yet!</p>\r\n          <button class=\"shop-now-btn\" @click=\"$emit('close')\">Shop Now</button>\r\n        </div>\r\n\r\n        <div v-else class=\"orders-list\">\r\n          <div v-for=\"order in orders\" :key=\"order._id\" class=\"order-card\">\r\n            <div class=\"order-header\">\r\n              <span class=\"order-id\">Order ID: {{ order._id }}</span>\r\n              <span class=\"order-date\">{{ formatDate(order.createdAt) }}</span>\r\n            </div>\r\n            <div class=\"order-items\">\r\n              <div v-for=\"item in order.items\" :key=\"item._id\" class=\"order-item\">\r\n                <img :src=\"getImageUrl(item.product.image || item.product.imageFront)\" :alt=\"item.product.name\" class=\"item-img\" />\r\n                <div class=\"item-info\">\r\n                  <h4>{{ item.product.name }}</h4>\r\n                  <p>Qty: {{ item.quantity }} | ₹{{ item.price }}</p>\r\n                </div>\r\n              </div>\r\n            </div>\r\n            <div class=\"order-footer\">\r\n              <span class=\"order-status\" :class=\"order.status\">{{ order.status }}</span>\r\n              <span class=\"order-total\">Total: ₹{{ order.totalAmount }}</span>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from \"axios\";\r\n\r\nexport default {\r\n  name: \"OrdersPage\",\r\n  data() {\r\n    return {\r\n      orders: [],\r\n      loading: false,\r\n    };\r\n  },\r\n  mounted() {\r\n    this.fetchOrders();\r\n  },\r\n  methods: {\r\n    async fetchOrders() {\r\n      this.loading = true;\r\n      try {\r\n        const token = localStorage.getItem(\"token\");\r\n        const res = await axios.get(\"http://localhost:5000/api/orders/my-orders\", {\r\n          headers: { Authorization: `Bearer ${token}` },\r\n        });\r\n        this.orders = res.data;\r\n      } catch (err) {\r\n        console.error(\"Error fetching orders:\", err);\r\n      } finally {\r\n        this.loading = false;\r\n      }\r\n    },\r\n    getImageUrl(path) {\r\n      if (!path) return null;\r\n      return path.startsWith(\"/\") ? `http://localhost:5000${path}` : path;\r\n    },\r\n    formatDate(date) {\r\n      return new Date(date).toLocaleDateString(\"en-IN\", {\r\n        day: \"numeric\",\r\n        month: \"short\",\r\n        year: \"numeric\",\r\n        hour: \"2-digit\",\r\n        minute: \"2-digit\",\r\n      });\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.modal-overlay {\r\n  position: fixed;\r\n  top: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 100%;\r\n  background: rgba(0, 0, 0, 0.5);\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n  z-index: 1001;\r\n}\r\n\r\n.modal-content {\r\n  background: white;\r\n  width: 95%;\r\n  max-width: 900px;\r\n  max-height: 90vh;\r\n  border-radius: 8px;\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.modal-header {\r\n  padding: 16px 24px;\r\n  border-bottom: 1px solid #f0f0f0;\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n}\r\n\r\n.modal-header h2 {\r\n  margin: 0;\r\n  color: #2874f0;\r\n}\r\n\r\n.close-btn {\r\n  background: none;\r\n  border: none;\r\n  font-size: 1.5rem;\r\n  cursor: pointer;\r\n}\r\n\r\n.modal-body {\r\n  padding: 24px;\r\n  overflow-y: auto;\r\n  flex: 1;\r\n}\r\n\r\n.order-card {\r\n  border: 1px solid #e0e0e0;\r\n  border-radius: 4px;\r\n  margin-bottom: 20px;\r\n  padding: 16px;\r\n}\r\n\r\n.order-header {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  margin-bottom: 12px;\r\n  color: #878787;\r\n  font-size: 14px;\r\n}\r\n\r\n.order-items {\r\n  border-top: 1px solid #f0f0f0;\r\n  padding-top: 12px;\r\n}\r\n\r\n.order-item {\r\n  display: flex;\r\n  gap: 16px;\r\n  margin-bottom: 12px;\r\n}\r\n\r\n.item-img {\r\n  width: 60px;\r\n  height: 60px;\r\n  object-fit: contain;\r\n}\r\n\r\n.order-footer {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  border-top: 1px solid #f0f0f0;\r\n  padding-top: 12px;\r\n  margin-top: 12px;\r\n}\r\n\r\n.order-status {\r\n  text-transform: uppercase;\r\n  font-weight: 600;\r\n  font-size: 14px;\r\n}\r\n\r\n.order-status.ordered { color: #2874f0; }\r\n.order-status.delivered { color: #388e3c; }\r\n.order-status.cancelled { color: #d32f2f; }\r\n\r\n.order-total {\r\n  font-weight: 600;\r\n  font-size: 18px;\r\n}\r\n\r\n.spinner {\r\n  border: 4px solid #f3f3f3;\r\n  border-top: 4px solid #2874f0;\r\n  border-radius: 50%;\r\n  width: 40px;\r\n  height: 40px;\r\n  animation: spin 1s linear infinite;\r\n  margin: 0 auto 16px;\r\n}\r\n\r\n@keyframes spin {\r\n  0% { transform: rotate(0deg); }\r\n  100% { transform: rotate(360deg); }\r\n}\r\n\r\n.loading, .empty-orders {\r\n  text-align: center;\r\n  padding: 40px;\r\n}\r\n\r\n.shop-now-btn {\r\n  background: #2874f0;\r\n  color: white;\r\n  border: none;\r\n  padding: 10px 30px;\r\n  border-radius: 2px;\r\n  cursor: pointer;\r\n  margin-top: 20px;\r\n}\r\n</style>\r\n"],"mappings":"AA8CA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,EAAE;MACVC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,WAAW,CAAC,CAAC;EACpB,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,WAAWA,CAAA,EAAG;MAClB,IAAI,CAACF,OAAM,GAAI,IAAI;MACnB,IAAI;QACF,MAAMI,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMC,GAAE,GAAI,MAAMX,KAAK,CAACY,GAAG,CAAC,4CAA4C,EAAE;UACxEC,OAAO,EAAE;YAAEC,aAAa,EAAE,UAAUN,KAAK;UAAG;QAC9C,CAAC,CAAC;QACF,IAAI,CAACL,MAAK,GAAIQ,GAAG,CAACT,IAAI;MACxB,EAAE,OAAOa,GAAG,EAAE;QACZC,OAAO,CAACC,KAAK,CAAC,wBAAwB,EAAEF,GAAG,CAAC;MAC9C,UAAU;QACR,IAAI,CAACX,OAAM,GAAI,KAAK;MACtB;IACF,CAAC;IACDc,WAAWA,CAACC,IAAI,EAAE;MAChB,IAAI,CAACA,IAAI,EAAE,OAAO,IAAI;MACtB,