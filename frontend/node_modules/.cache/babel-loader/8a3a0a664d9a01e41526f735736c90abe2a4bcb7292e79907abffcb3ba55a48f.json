{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  name: \"LoginPage\",\n  data() {\n    return {\n      isSignup: false,\n      email: \"\",\n      password: \"\",\n      isFilled: false,\n      emailError: \"\",\n      passwordError: \"\",\n      loading: false,\n      // Forgot password modal\n      showForgotModal: false,\n      forgotEmail: \"\"\n    };\n  },\n  computed: {\n    formTitle() {\n      return this.isSignup ? \"Sign Up\" : \"Login\";\n    },\n    toggleText() {\n      return this.isSignup ? \"Already have an account?\" : \"Don’t have an account?\";\n    },\n    toggleLinkText() {\n      return this.isSignup ? \"Login\" : \"Create an account\";\n    }\n  },\n  methods: {\n    toggleMode() {\n      this.isSignup = !this.isSignup;\n      this.resetForm();\n    },\n    resetForm() {\n      this.email = \"\";\n      this.password = \"\";\n      this.isFilled = false;\n      this.emailError = \"\";\n      this.passwordError = \"\";\n    },\n    checkFilled() {\n      this.isFilled = this.email.trim() !== \"\" && this.password.trim() !== \"\";\n    },\n    validateEmail(email) {\n      const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;\n      return emailRegex.test(email);\n    },\n    validatePassword(password) {\n      const passwordRegex = /^(?=.*[A-Z])(?=.*[a-z])(?=.*\\d)(?=.*[!@#$%^&*])[A-Za-z\\d!@#$%^&*]{8,}$/;\n      return passwordRegex.test(password);\n    },\n    async handleSubmit() {\n      this.emailError = \"\";\n      this.passwordError = \"\";\n      if (!this.validateEmail(this.email)) {\n        this.emailError = \"Please enter a valid email address.\";\n      }\n      if (this.isSignup && !this.validatePassword(this.password)) {\n        this.passwordError = \"Password must be at least 8 characters long, contain uppercase, lowercase, a number, and a special character.\";\n      }\n      if (this.emailError || this.passwordError) return;\n      this.loading = true;\n      try {\n        const endpoint = this.isSignup ? \"/api/auth/register\" : \"/api/auth/login\";\n        const {\n          data\n        } = await axios.post(endpoint, {\n          email: this.email,\n          password: this.password\n        });\n        if (this.isSignup) {\n          alert(\"Registered successfully. Please login.\");\n          this.toggleMode();\n        } else {\n          localStorage.setItem(\"token\", data.token);\n          alert(\"Login successful!\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        console.error(\"Auth error:\", err);\n        alert(err.response?.data?.msg || \"Something went wrong.\");\n      } finally {\n        this.loading = false;\n      }\n    },\n    // Forgot password logic\n    async sendResetLink() {\n      if (!this.validateEmail(this.forgotEmail)) {\n        alert(\"Please enter a valid email address.\");\n        return;\n      }\n      this.loading = true;\n      try {\n        await axios.post(\"/api/auth/forgot-password\", {\n          email: this.forgotEmail\n        });\n        alert(\"If this email is registered, a reset link has been sent to your inbox.\");\n        this.showForgotModal = false;\n      } catch (err) {\n        console.error(\"Forgot password error:\", err);\n        alert(err.response?.data?.msg || \"Something went wrong.\");\n      } finally {\n        this.loading = false;\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","isSignup","email","password","isFilled","emailError","passwordError","loading","showForgotModal","forgotEmail","computed","formTitle","toggleText","toggleLinkText","methods","toggleMode","resetForm","checkFilled","trim","validateEmail","emailRegex","test","validatePassword","passwordRegex","handleSubmit","endpoint","post","alert","localStorage","setItem","token","$router","push","err","console","error","response","msg","sendResetLink"],"sources":["C:\\Users\\LENOVO\\Music\\distribution-agency-project\\frontend\\src\\views\\Login.vue"],"sourcesContent":["<template>\n  <div class=\"login-container\">\n    <div class=\"overlay\"></div>\n\n    <div class=\"login-form-section\">\n      <div :class=\"['login-box', isFilled ? 'box-filled' : '']\">\n        <img src=\"@/assets/logo.jpeg\" alt=\"Company Logo\" class=\"logo\" />\n\n        <h2 class=\"form-title\">{{ formTitle }}</h2>\n\n        <p class=\"signup-link\">\n          {{ toggleText }}\n          <a href=\"#\" @click.prevent=\"toggleMode\">{{ toggleLinkText }}</a>\n        </p>\n\n        <form\n          class=\"login-form\"\n          @submit.prevent=\"handleSubmit\"\n          @input=\"checkFilled\"\n          novalidate\n        >\n          <label for=\"email\" class=\"sr-only\">Email</label>\n          <input\n            type=\"email\"\n            id=\"email\"\n            v-model.trim=\"email\"\n            placeholder=\"Enter email\"\n            required\n            autocomplete=\"username\"\n            aria-invalid=\"emailError ? 'true' : 'false'\"\n          />\n          <p v-if=\"emailError\" class=\"error\">{{ emailError }}</p>\n\n          <label for=\"password\" class=\"sr-only\">Password</label>\n          <input\n            type=\"password\"\n            id=\"password\"\n            v-model.trim=\"password\"\n            placeholder=\"Enter password\"\n            required\n            :autocomplete=\"isSignup ? 'new-password' : 'current-password'\"\n            aria-invalid=\"passwordError ? 'true' : 'false'\"\n          />\n          <p v-if=\"passwordError\" class=\"error\">{{ passwordError }}</p>\n\n          <a\n            v-if=\"!isSignup\"\n            href=\"#\"\n            class=\"forgot-password\"\n            @click.prevent=\"showForgotModal = true\"\n          >\n            Forgot your password?\n          </a>\n\n          <button type=\"submit\" class=\"login-button\" :disabled=\"loading\">\n            <span v-if=\"loading\">Processing...</span>\n            <span v-else>{{ isSignup ? \"Sign Up\" : \"Login\" }}</span>\n          </button>\n        </form>\n\n        <footer class=\"form-footer\">\n          <small>© 2025 YourCompany. All rights reserved.</small>\n        </footer>\n      </div>\n    </div>\n\n    <!-- Forgot Password Modal -->\n    <div v-if=\"showForgotModal\" class=\"modal\">\n      <div class=\"modal-content\">\n        <h3>Reset Password</h3>\n        <p>\n          Enter your registered email address to receive a password reset link.\n        </p>\n        <input\n          type=\"email\"\n          v-model.trim=\"forgotEmail\"\n          placeholder=\"Enter your email\"\n        />\n        <div class=\"modal-actions\">\n          <button @click=\"sendResetLink\" :disabled=\"loading\">\n            {{ loading ? \"Sending...\" : \"Send Reset Link\" }}\n          </button>\n          <button @click=\"showForgotModal = false\">Cancel</button>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"LoginPage\",\n  data() {\n    return {\n      isSignup: false,\n      email: \"\",\n      password: \"\",\n      isFilled: false,\n      emailError: \"\",\n      passwordError: \"\",\n      loading: false,\n\n      // Forgot password modal\n      showForgotModal: false,\n      forgotEmail: \"\",\n    };\n  },\n  computed: {\n    formTitle() {\n      return this.isSignup ? \"Sign Up\" : \"Login\";\n    },\n    toggleText() {\n      return this.isSignup\n        ? \"Already have an account?\"\n        : \"Don’t have an account?\";\n    },\n    toggleLinkText() {\n      return this.isSignup ? \"Login\" : \"Create an account\";\n    },\n  },\n  methods: {\n    toggleMode() {\n      this.isSignup = !this.isSignup;\n      this.resetForm();\n    },\n    resetForm() {\n      this.email = \"\";\n      this.password = \"\";\n      this.isFilled = false;\n      this.emailError = \"\";\n      this.passwordError = \"\";\n    },\n    checkFilled() {\n      this.isFilled = this.email.trim() !== \"\" && this.password.trim() !== \"\";\n    },\n    validateEmail(email) {\n      const emailRegex = /^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/;\n      return emailRegex.test(email);\n    },\n    validatePassword(password) {\n      const passwordRegex =\n        /^(?=.*[A-Z])(?=.*[a-z])(?=.*\\d)(?=.*[!@#$%^&*])[A-Za-z\\d!@#$%^&*]{8,}$/;\n      return passwordRegex.test(password);\n    },\n    async handleSubmit() {\n      this.emailError = \"\";\n      this.passwordError = \"\";\n\n      if (!this.validateEmail(this.email)) {\n        this.emailError = \"Please enter a valid email address.\";\n      }\n      if (this.isSignup && !this.validatePassword(this.password)) {\n        this.passwordError =\n          \"Password must be at least 8 characters long, contain uppercase, lowercase, a number, and a special character.\";\n      }\n\n      if (this.emailError || this.passwordError) return;\n\n      this.loading = true;\n\n      try {\n        const endpoint = this.isSignup\n          ? \"/api/auth/register\"\n          : \"/api/auth/login\";\n\n        const { data } = await axios.post(endpoint, {\n          email: this.email,\n          password: this.password,\n        });\n\n        if (this.isSignup) {\n          alert(\"Registered successfully. Please login.\");\n          this.toggleMode();\n        } else {\n          localStorage.setItem(\"token\", data.token);\n          alert(\"Login successful!\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        console.error(\"Auth error:\", err);\n        alert(err.response?.data?.msg || \"Something went wrong.\");\n      } finally {\n        this.loading = false;\n      }\n    },\n\n    // Forgot password logic\n    async sendResetLink() {\n      if (!this.validateEmail(this.forgotEmail)) {\n        alert(\"Please enter a valid email address.\");\n        return;\n      }\n\n      this.loading = true;\n      try {\n        await axios.post(\"/api/auth/forgot-password\", {\n          email: this.forgotEmail,\n        });\n        alert(\n          \"If this email is registered, a reset link has been sent to your inbox.\"\n        );\n        this.showForgotModal = false;\n      } catch (err) {\n        console.error(\"Forgot password error:\", err);\n        alert(err.response?.data?.msg || \"Something went wrong.\");\n      } finally {\n        this.loading = false;\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* Existing styles remain unchanged */\n\n/* Forgot Password Modal */\n.modal {\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background-color: rgba(0, 0, 0, 0.6);\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  z-index: 999;\n}\n.modal-content {\n  background: #fff;\n  padding: 20px;\n  border-radius: 10px;\n  max-width: 400px;\n  width: 90%;\n  text-align: center;\n}\n.modal-content input {\n  width: 100%;\n  padding: 8px;\n  margin-top: 10px;\n  border-radius: 5px;\n  border: 1px solid #ccc;\n}\n.modal-actions {\n  margin-top: 15px;\n  display: flex;\n  justify-content: space-between;\n}\n.modal-actions button {\n  padding: 8px 12px;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n}\n.modal-actions button:first-child {\n  background-color: #1e3a8a;\n  color: white;\n}\n.modal-actions button:last-child {\n  background-color: #ccc;\n}\n</style>\n"],"mappings":";AA0FA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,KAAK;MACfC,KAAK,EAAE,EAAE;MACTC,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE,KAAK;MACfC,UAAU,EAAE,EAAE;MACdC,aAAa,EAAE,EAAE;MACjBC,OAAO,EAAE,KAAK;MAEd;MACAC,eAAe,EAAE,KAAK;MACtBC,WAAW,EAAE;IACf,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,SAASA,CAAA,EAAG;MACV,OAAO,IAAI,CAACV,QAAO,GAAI,SAAQ,GAAI,OAAO;IAC5C,CAAC;IACDW,UAAUA,CAAA,EAAG;MACX,OAAO,IAAI,CAACX,QAAO,GACf,0BAAyB,GACzB,wBAAwB;IAC9B,CAAC;IACDY,cAAcA,CAAA,EAAG;MACf,OAAO,IAAI,CAACZ,QAAO,GAAI,OAAM,GAAI,mBAAmB;IACtD;EACF,CAAC;EA