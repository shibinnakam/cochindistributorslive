{"ast":null,"code":"import axios from \"axios\";\nexport default {\n  name: \"AdminOrders\",\n  data() {\n    return {\n      orders: [],\n      loading: false\n    };\n  },\n  mounted() {\n    this.fetchOrders();\n  },\n  methods: {\n    async fetchOrders() {\n      this.loading = true;\n      try {\n        const token = localStorage.getItem(\"token\");\n        const res = await axios.get(\"http://localhost:5000/api/orders/admin/all-orders\", {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.orders = res.data;\n      } catch (err) {\n        console.error(\"Error fetching admin orders:\", err);\n      } finally {\n        this.loading = false;\n      }\n    },\n    async updateStatus(orderId, newStatus) {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.patch(`http://localhost:5000/api/orders/admin/orders/${orderId}/status`, {\n          status: newStatus\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        alert(\"Order status updated successfully\");\n      } catch (err) {\n        console.error(\"Error updating order status:\", err);\n        alert(\"Failed to update status\");\n      }\n    },\n    formatDate(date) {\n      return new Date(date).toLocaleDateString(\"en-IN\", {\n        day: \"numeric\",\n        month: \"short\",\n        year: \"numeric\"\n      });\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","orders","loading","mounted","fetchOrders","methods","token","localStorage","getItem","res","get","headers","Authorization","err","console","error","updateStatus","orderId","newStatus","patch","status","alert","formatDate","date","Date","toLocaleDateString","day","month","year"],"sources":["C:\\Users\\LENOVO\\Music\\OneDrive\\Pictures\\distribution-agency-project\\frontend\\src\\views\\AdminOrders.vue"],"sourcesContent":["<template>\n  <div class=\"admin-orders-container\">\n    <div class=\"section-card\">\n      <div class=\"section-header\">\n        <h3>Order Management</h3>\n        <button class=\"btn-refresh\" @click=\"fetchOrders\">Refresh</button>\n      </div>\n\n      <div v-if=\"loading\" class=\"loading-state\">\n        <div class=\"spinner\"></div>\n        <p>Loading orders...</p>\n      </div>\n\n      <div v-else-if=\"orders.length === 0\" class=\"empty-state\">\n        <p>No orders found.</p>\n      </div>\n\n      <div v-else class=\"orders-table-wrapper\">\n        <table class=\"data-table\">\n          <thead>\n            <tr>\n              <th>Order ID</th>\n              <th>User Details</th>\n              <th>Products</th>\n              <th>Total Amount</th>\n              <th>Status</th>\n              <th>Date</th>\n              <th>Actions</th>\n            </tr>\n          </thead>\n          <tbody>\n            <tr v-for=\"order in orders\" :key=\"order._id\">\n              <td>#{{ order._id.slice(-6) }}</td>\n              <td>\n                <div class=\"user-info\">\n                  <strong>{{ order.user?.name || \"N/A\" }}</strong>\n                  <span>Merchant: {{ order.user?.storeName || \"N/A\" }}</span>\n                  <small>Phone: {{ order.user?.phone || \"N/A\" }}</small>\n                  <small\n                    >Address: {{ order.user?.storeAddress || \"N/A\" }}</small\n                  >\n                  <small>Pincode: {{ order.user?.pincode || \"N/A\" }}</small>\n                </div>\n              </td>\n              <td>\n                <div class=\"products-list\">\n                  <div\n                    v-for=\"item in order.items\"\n                    :key=\"item._id\"\n                    class=\"product-item\"\n                  >\n                    {{ item.product?.name || \"N/A\" }} (x{{ item.quantity }})\n                  </div>\n                </div>\n              </td>\n              <td>â‚¹{{ order.totalAmount }}</td>\n              <td>\n                <span class=\"status-badge\" :class=\"order.status\">{{\n                  order.status\n                }}</span>\n              </td>\n              <td>{{ formatDate(order.createdAt) }}</td>\n              <td>\n                <div class=\"actions\">\n                  <select\n                    v-model=\"order.status\"\n                    @change=\"updateStatus(order._id, order.status)\"\n                    class=\"status-select\"\n                  >\n                    <option value=\"ordered\">Ordered</option>\n                    <option value=\"accepted\">Accepted</option>\n                    <option value=\"shipped\">Shipped</option>\n                    <option value=\"delivered\">Delivered</option>\n                    <option value=\"cancelled\">Cancelled</option>\n                  </select>\n                </div>\n              </td>\n            </tr>\n          </tbody>\n        </table>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"AdminOrders\",\n  data() {\n    return {\n      orders: [],\n      loading: false,\n    };\n  },\n  mounted() {\n    this.fetchOrders();\n  },\n  methods: {\n    async fetchOrders() {\n      this.loading = true;\n      try {\n        const token = localStorage.getItem(\"token\");\n        const res = await axios.get(\n          \"http://localhost:5000/api/orders/admin/all-orders\",\n          {\n            headers: { Authorization: `Bearer ${token}` },\n          }\n        );\n        this.orders = res.data;\n      } catch (err) {\n        console.error(\"Error fetching admin orders:\", err);\n      } finally {\n        this.loading = false;\n      }\n    },\n    async updateStatus(orderId, newStatus) {\n      try {\n        const token = localStorage.getItem(\"token\");\n        await axios.patch(\n          `http://localhost:5000/api/orders/admin/orders/${orderId}/status`,\n          { status: newStatus },\n          { headers: { Authorization: `Bearer ${token}` } }\n        );\n        alert(\"Order status updated successfully\");\n      } catch (err) {\n        console.error(\"Error updating order status:\", err);\n        alert(\"Failed to update status\");\n      }\n    },\n    formatDate(date) {\n      return new Date(date).toLocaleDateString(\"en-IN\", {\n        day: \"numeric\",\n        month: \"short\",\n        year: \"numeric\",\n      });\n    },\n  },\n};\n</script>\n\n<style scoped>\n.admin-orders-container {\n  padding: 20px;\n}\n\n.user-info {\n  display: flex;\n  flex-direction: column;\n  gap: 2px;\n}\n\n.user-info strong {\n  color: #333;\n}\n\n.user-info span {\n  font-size: 0.85rem;\n  color: #666;\n}\n\n.user-info small {\n  font-size: 0.75rem;\n  color: #888;\n}\n\n.products-list {\n  max-height: 100px;\n  overflow-y: auto;\n}\n\n.product-item {\n  font-size: 0.85rem;\n  margin-bottom: 2px;\n}\n\n.status-badge {\n  padding: 4px 8px;\n  border-radius: 12px;\n  font-size: 0.75rem;\n  font-weight: 600;\n  text-transform: uppercase;\n}\n\n.status-badge.ordered {\n  background: #e3f2fd;\n  color: #1976d2;\n}\n.status-badge.accepted {\n  background: #f3e5f5;\n  color: #7b1fa2;\n}\n.status-badge.shipped {\n  background: #fff3e0;\n  color: #f57c00;\n}\n.status-badge.delivered {\n  background: #e8f5e9;\n  color: #388e3c;\n}\n.status-badge.cancelled {\n  background: #ffebee;\n  color: #d32f2f;\n}\n\n.status-select {\n  padding: 4px 8px;\n  border-radius: 4px;\n  border: 1px solid #ddd;\n  font-size: 0.85rem;\n}\n\n.loading-state,\n.empty-state {\n  text-align: center;\n  padding: 40px;\n  color: #666;\n}\n\n.spinner {\n  border: 3px solid #f3f3f3;\n  border-top: 3px solid #3498db;\n  border-radius: 50%;\n  width: 30px;\n  height: 30px;\n  animation: spin 1s linear infinite;\n  margin: 0 auto 10px;\n}\n\n@keyframes spin {\n  0% {\n    transform: rotate(0deg);\n  }\n  100% {\n    transform: rotate(360deg);\n  }\n}\n\n.btn-refresh {\n  background: #3498db;\n  color: white;\n  border: none;\n  padding: 6px 12px;\n  border-radius: 4px;\n  cursor: pointer;\n}\n\n.btn-refresh:hover {\n  background: #2980b9;\n}\n</style>\n"],"mappings":"AAsFA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,EAAE;MACVC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,WAAW,CAAC,CAAC;EACpB,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,WAAWA,CAAA,EAAG;MAClB,IAAI,CAACF,OAAM,GAAI,IAAI;MACnB,IAAI;QACF,MAAMI,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMC,GAAE,GAAI,MAAMX,KAAK,CAACY,GAAG,CACzB,mDAAmD,EACnD;UACEC,OAAO,EAAE;YAAEC,aAAa,EAAE,UAAUN,KAAK;UAAG;QAC9C,CACF,CAAC;QACD,IAAI,CAACL,MAAK,GAAIQ,GAAG,CAACT,IAAI;MACxB,EAAE,OAAOa,GAAG,EAAE;QACZC,OAAO,CAACC,KAAK,CAAC,8BAA8B,EAAEF,GAAG,CAAC;MACpD,UAAU;QACR,IAAI,CAACX,OAAM,GAAI,KAAK;MACtB;IACF,CAAC;IACD,MAAMc,YAAYA,CAACC,OAAO,EAAEC,SAAS,EAAE;MACrC,IAAI;QACF,MAAMZ,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMV,KAAK,CAACqB,KAAK,CACf,iDAAiDF,OAAO,SAAS,EACjE;UAAEG,MAAM,EAAEF;QAAU,CAAC,EACrB;UAAEP,OAAO,EAAE;YAAEC,aAAa,EAAE,UAAUN,KAAK;UAAG;QAAE,CAClD,CAAC;QACDe,KAAK,CAAC,mCAAmC,CAAC;MAC5C,EAAE,OAAOR,GAAG,EAAE;QACZC,OAAO,CAACC,KAAK,CAAC,8BAA8B,EAAEF,GAAG,CAAC;QAClDQ,KAAK,CAAC,yBAAyB,CAAC;MAClC;IACF,CAAC;IACDC,UAAUA,CAACC,IAAI,EAAE;MACf,OAAO,IAAIC,IAAI,CAACD,IAAI,CAAC,CAACE,kBAAkB,CAAC,OAAO,EAAE;QAChDC,GAAG,EAAE,SAAS;QACdC,KAAK,EAAE,OAAO;QACdC,IAAI,EAAE;MACR,CAAC,CAAC;IACJ;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}