{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport axios from \"axios\";\nexport default {\n  name: \"LoginModal\",\n  data() {\n    return {\n      isSignup: false,\n      email: \"\",\n      password: \"\",\n      isFilled: false\n    };\n  },\n  methods: {\n    toggleMode() {\n      this.isSignup = !this.isSignup;\n      this.email = \"\";\n      this.password = \"\";\n      this.isFilled = false;\n    },\n    checkFilled() {\n      this.isFilled = this.email.trim() !== \"\" && this.password.trim() !== \"\";\n    },\n    async handleSubmit() {\n      try {\n        const endpoint = this.isSignup ? \"/api/auth/register\" : \"/api/auth/login\";\n        const res = await axios.post(endpoint, {\n          email: this.email,\n          password: this.password\n        });\n        if (this.isSignup) {\n          alert(\"Registered successfully. Please login.\");\n          this.toggleMode();\n        } else {\n          localStorage.setItem(\"token\", res.data.token);\n          alert(\"Login successful!\");\n          this.$emit(\"close\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        console.error(\"Login/Register error:\", err);\n        alert(err.response?.data?.msg || err.message || \"An error occurred.\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","isSignup","email","password","isFilled","methods","toggleMode","checkFilled","trim","handleSubmit","endpoint","res","post","alert","localStorage","setItem","token","$emit","$router","push","err","console","error","response","msg","message"],"sources":["C:\\Users\\LENOVO\\Music\\distribution-agency-project\\frontend\\src\\views\\Login.vue"],"sourcesContent":["<template>\n  <div class=\"modal-overlay\" @click.self=\"$emit('close')\">\n    <div :class=\"['modal-box', isFilled ? 'box-filled' : '']\">\n      <button class=\"close-btn\" @click=\"$emit('close')\">×</button>\n\n      <img src=\"@/assets/logo.jpeg\" alt=\"Logo\" class=\"logo\" />\n      <h2 class=\"form-title\">{{ isSignup ? \"Sign Up\" : \"Login\" }}</h2>\n\n      <p class=\"signup-link\">\n        {{ isSignup ? \"Already have an account?\" : \"Don’t have an account?\" }}\n        <a href=\"#\" @click.prevent=\"toggleMode\">\n          {{ isSignup ? \"Login\" : \"Create an account\" }}\n        </a>\n      </p>\n\n      <form\n        class=\"login-form\"\n        @submit.prevent=\"handleSubmit\"\n        @input=\"checkFilled\"\n      >\n        <input\n          type=\"email\"\n          id=\"email\"\n          v-model=\"email\"\n          placeholder=\"Enter email\"\n          required\n        />\n        <input\n          type=\"password\"\n          id=\"password\"\n          v-model=\"password\"\n          placeholder=\"Enter password\"\n          required\n        />\n\n        <a v-if=\"!isSignup\" href=\"#\" class=\"forgot-password\">\n          Forgot your password?\n        </a>\n\n        <button type=\"submit\" class=\"login-button\">\n          {{ isSignup ? \"Sign Up\" : \"Login\" }}\n        </button>\n      </form>\n\n      <footer class=\"form-footer\">\n        <small>© 2025 YourCompany. All rights reserved.</small>\n      </footer>\n    </div>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"LoginModal\",\n  data() {\n    return {\n      isSignup: false,\n      email: \"\",\n      password: \"\",\n      isFilled: false,\n    };\n  },\n  methods: {\n    toggleMode() {\n      this.isSignup = !this.isSignup;\n      this.email = \"\";\n      this.password = \"\";\n      this.isFilled = false;\n    },\n    checkFilled() {\n      this.isFilled = this.email.trim() !== \"\" && this.password.trim() !== \"\";\n    },\n    async handleSubmit() {\n      try {\n        const endpoint = this.isSignup\n          ? \"/api/auth/register\"\n          : \"/api/auth/login\";\n\n        const res = await axios.post(endpoint, {\n          email: this.email,\n          password: this.password,\n        });\n\n        if (this.isSignup) {\n          alert(\"Registered successfully. Please login.\");\n          this.toggleMode();\n        } else {\n          localStorage.setItem(\"token\", res.data.token);\n          alert(\"Login successful!\");\n          this.$emit(\"close\");\n          this.$router.push(\"/admin\");\n        }\n      } catch (err) {\n        console.error(\"Login/Register error:\", err);\n        alert(err.response?.data?.msg || err.message || \"An error occurred.\");\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n/* Overlay */\n.modal-overlay {\n  position: fixed;\n  top: 0;\n  left: 0;\n  width: 100%;\n  height: 100%;\n  background: rgba(0, 0, 0, 0.5);\n  display: flex;\n  align-items: center;\n  justify-content: center;\n  z-index: 999;\n}\n\n/* Box */\n.modal-box {\n  background: #fff;\n  padding: 2rem;\n  border-radius: 20px;\n  width: 90%;\n  max-width: 400px;\n  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);\n  position: relative;\n  animation: slideDown 0.3s ease;\n}\n\n/* Highlight when filled */\n.box-filled {\n  border: 2px solid #3b82f6;\n  box-shadow: 0 6px 25px rgba(59, 130, 246, 0.2);\n}\n\n/* Close button */\n.close-btn {\n  position: absolute;\n  right: 15px;\n  top: 10px;\n  font-size: 24px;\n  background: none;\n  border: none;\n  cursor: pointer;\n}\n\n/* Logo */\n.logo {\n  display: block;\n  margin: 0 auto 1rem auto;\n  height: 60px;\n}\n\n/* Title */\n.form-title {\n  text-align: center;\n  font-size: 1.6rem;\n  margin-bottom: 0.5rem;\n}\n\n/* Signup link */\n.signup-link {\n  text-align: center;\n  font-size: 0.9rem;\n  margin-bottom: 1.5rem;\n}\n\n.signup-link a {\n  color: #007bff;\n  text-decoration: none;\n  cursor: pointer;\n}\n\n/* Inputs */\n.login-form input {\n  width: 100%;\n  padding: 0.5rem;\n  margin-bottom: 1rem;\n  border: 1px solid #ced4da;\n  border-radius: 10px;\n}\n\n.login-form input:focus {\n  outline: none;\n  border-color: #3b82f6;\n  box-shadow: 0 0 5px rgba(59, 130, 246, 0.4);\n}\n\n/* Forgot password */\n.forgot-password {\n  font-size: 0.85rem;\n  color: #007bff;\n  text-decoration: none;\n  display: block;\n  margin-bottom: 1rem;\n}\n\n/* Button */\n.login-button {\n  width: 100%;\n  background-color: #1e3a8a;\n  color: white;\n  border: none;\n  padding: 0.6rem;\n  border-radius: 10px;\n  font-weight: bold;\n  cursor: pointer;\n  transition: background 0.3s ease;\n}\n\n.login-button:hover {\n  background-color: #1d4ed8;\n}\n\n/* Footer */\n.form-footer {\n  text-align: center;\n  margin-top: 1rem;\n  font-size: 0.8rem;\n  color: #6c757d;\n}\n\n/* Animation */\n@keyframes slideDown {\n  from {\n    transform: translateY(-30px);\n    opacity: 0;\n  }\n  to {\n    transform: translateY(0);\n    opacity: 1;\n  }\n}\n</style>\n"],"mappings":";AAoDA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,YAAY;EAClBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,KAAK;MACfC,KAAK,EAAE,EAAE;MACTC,QAAQ,EAAE,EAAE;MACZC,QAAQ,EAAE;IACZ,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAI,CAACL,QAAO,GAAI,CAAC,IAAI,CAACA,QAAQ;MAC9B,IAAI,CAACC,KAAI,GAAI,EAAE;MACf,IAAI,CAACC,QAAO,GAAI,EAAE;MAClB,IAAI,CAACC,QAAO,GAAI,KAAK;IACvB,CAAC;IACDG,WAAWA,CAAA,EAAG;MACZ,IAAI,CAACH,QAAO,GAAI,IAAI,CAACF,KAAK,CAACM,IAAI,CAAC,MAAM,EAAC,IAAK,IAAI,CAACL,QAAQ,CAACK,IAAI,CAAC,MAAM,EAAE;IACzE,CAAC;IACD,MAAMC,YAAYA,CAAA,EAAG;MACnB,IAAI;QACF,MAAMC,QAAO,GAAI,IAAI,CAACT,QAAO,GACzB,oBAAmB,GACnB,iBAAiB;QAErB,MAAMU,GAAE,GAAI,MAAMb,KAAK,CAACc,IAAI,CAACF,QAAQ,EAAE;UACrCR,KAAK,EAAE,IAAI,CAACA,KAAK;UACjBC,QAAQ,EAAE,IAAI,CAACA;QACjB,CAAC,CAAC;QAEF,IAAI,IAAI,CAACF,QAAQ,EAAE;UACjBY,KAAK,CAAC,wCAAwC,CAAC;UAC/C,IAAI,CAACP,UAAU,CAAC,CAAC;QACnB,OAAO;UACLQ,YAAY,CAACC,OAAO,CAAC,OAAO,EAAEJ,GAAG,CAACX,IAAI,CAACgB,KAAK,CAAC;UAC7CH,KAAK,CAAC,mBAAmB,CAAC;UAC1B,IAAI,CAACI,KAAK,CAAC,OAAO,CAAC;UACnB,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC,QAAQ,CAAC;QAC7B;MACF,EAAE,OAAOC,GAAG,EAAE;QACZC,OAAO,CAACC,KAAK,CAAC,uBAAuB,EAAEF,GAAG,CAAC;QAC3CP,KAAK,CAACO,GAAG,CAACG,QAAQ,EAAEvB,IAAI,EAAEwB,GAAE,IAAKJ,GAAG,CAAC