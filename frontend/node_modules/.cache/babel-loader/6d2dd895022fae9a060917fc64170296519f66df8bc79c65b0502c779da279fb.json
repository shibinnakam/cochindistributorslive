{"ast":null,"code":"import axios from \"axios\";\nexport default {\n  name: \"ForgotPassword\",\n  data() {\n    return {\n      email: \"\",\n      error: \"\",\n      message: \"\",\n      loading: false\n    };\n  },\n  methods: {\n    async handleSubmit() {\n      this.error = \"\";\n      this.message = \"\";\n      this.loading = true;\n      try {\n        const res = await axios.post(\"/api/auth/forgot-password\", {\n          email: this.email\n        });\n        this.message = res.data.message || \"If your email is registered, a reset link has been sent.\";\n      } catch (err) {\n        this.error = err.response?.data?.message || \"Error sending reset link.\";\n      } finally {\n        this.loading = false;\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","email","error","message","loading","methods","handleSubmit","res","post","err","response"],"sources":["C:\\Users\\LENOVO\\Music\\distribution-agency-project\\frontend\\src\\views\\ForgotPassword.vue"],"sourcesContent":["<template>\n  <div class=\"forgot-password-container\">\n    <h2>Forgot Password</h2>\n    <form @submit.prevent=\"handleSubmit\">\n      <input\n        type=\"email\"\n        v-model=\"email\"\n        placeholder=\"Enter your registered email\"\n        required\n      />\n      <p v-if=\"error\" class=\"error\">{{ error }}</p>\n      <p v-if=\"message\" class=\"message\">{{ message }}</p>\n      <button type=\"submit\" :disabled=\"loading\">\n        {{ loading ? \"Sending...\" : \"Send Reset Link\" }}\n      </button>\n    </form>\n  </div>\n</template>\n\n<script>\nimport axios from \"axios\";\n\nexport default {\n  name: \"ForgotPassword\",\n  data() {\n    return {\n      email: \"\",\n      error: \"\",\n      message: \"\",\n      loading: false,\n    };\n  },\n  methods: {\n    async handleSubmit() {\n      this.error = \"\";\n      this.message = \"\";\n      this.loading = true;\n      try {\n        const res = await axios.post(\"/api/auth/forgot-password\", {\n          email: this.email,\n        });\n        this.message =\n          res.data.message ||\n          \"If your email is registered, a reset link has been sent.\";\n      } catch (err) {\n        this.error = err.response?.data?.message || \"Error sending reset link.\";\n      } finally {\n        this.loading = false;\n      }\n    },\n  },\n};\n</script>\n\n<style scoped>\n.forgot-password-container {\n  max-width: 400px;\n  margin: 3rem auto;\n  padding: 2rem;\n  border: 1px solid #ccc;\n  border-radius: 8px;\n  font-family: \"Segoe UI\", Tahoma, Geneva, Verdana, sans-serif;\n}\ninput {\n  width: 100%;\n  padding: 0.5rem;\n  margin-bottom: 0.7rem;\n  border-radius: 4px;\n  border: 1px solid #ccc;\n}\nbutton {\n  width: 100%;\n  padding: 0.6rem;\n  background-color: #1e3a8a;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n}\nbutton:disabled {\n  background-color: #888;\n  cursor: not-allowed;\n}\n.error {\n  color: red;\n  font-size: 0.9rem;\n}\n.message {\n  color: green;\n  font-size: 0.9rem;\n}\n</style>\n"],"mappings":"AAoBA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,gBAAgB;EACtBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,KAAK,EAAE,EAAE;MACTC,KAAK,EAAE,EAAE;MACTC,OAAO,EAAE,EAAE;MACXC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,YAAYA,CAAA,EAAG;MACnB,IAAI,CAACJ,KAAI,GAAI,EAAE;MACf,IAAI,CAACC,OAAM,GAAI,EAAE;MACjB,IAAI,CAACC,OAAM,GAAI,IAAI;MACnB,IAAI;QACF,MAAMG,GAAE,GAAI,MAAMT,KAAK,CAACU,IAAI,CAAC,2BAA2B,EAAE;UACxDP,KAAK,EAAE,IAAI,CAACA;QACd,CAAC,CAAC;QACF,IAAI,CAACE,OAAM,GACTI,GAAG,CAACP,IAAI,CAACG,OAAM,IACf,0DAA0D;MAC9D,EAAE,OAAOM,GAAG,EAAE;QACZ,IAAI,CAACP,KAAI,GAAIO,GAAG,CAACC,QAAQ,EAAEV,IAAI,EAAEG,OAAM,IAAK,2BAA2B;MACzE,UAAU;QACR,IAAI,CAACC,OAAM,GAAI,KAAK;MACtB;IACF;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}