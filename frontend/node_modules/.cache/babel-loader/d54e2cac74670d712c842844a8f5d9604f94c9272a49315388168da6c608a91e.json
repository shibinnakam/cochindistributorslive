{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: 'AdminOrders',\n  data() {\n    return {\n      orders: [],\n      loading: false\n    };\n  },\n  mounted() {\n    this.fetchOrders();\n  },\n  methods: {\n    async fetchOrders() {\n      this.loading = true;\n      try {\n        const token = localStorage.getItem('token');\n        const res = await axios.get('http://localhost:5000/api/orders/admin/all-orders', {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        this.orders = res.data;\n      } catch (err) {\n        console.error('Error fetching admin orders:', err);\n      } finally {\n        this.loading = false;\n      }\n    },\n    async updateStatus(orderId, newStatus) {\n      try {\n        const token = localStorage.getItem('token');\n        await axios.patch(`http://localhost:5000/api/orders/admin/orders/${orderId}/status`, {\n          status: newStatus\n        }, {\n          headers: {\n            Authorization: `Bearer ${token}`\n          }\n        });\n        alert('Order status updated successfully');\n      } catch (err) {\n        console.error('Error updating order status:', err);\n        alert('Failed to update status');\n      }\n    },\n    formatDate(date) {\n      return new Date(date).toLocaleDateString('en-IN', {\n        day: 'numeric',\n        month: 'short',\n        year: 'numeric'\n      });\n    }\n  }\n};","map":{"version":3,"names":["axios","name","data","orders","loading","mounted","fetchOrders","methods","token","localStorage","getItem","res","get","headers","Authorization","err","console","error","updateStatus","orderId","newStatus","patch","status","alert","formatDate","date","Date","toLocaleDateString","day","month","year"],"sources":["C:\\Users\\LENOVO\\Music\\OneDrive\\Pictures\\distribution-agency-project\\frontend\\src\\views\\AdminOrders.vue"],"sourcesContent":["<template>\r\n  <div class=\"admin-orders-container\">\r\n    <div class=\"section-card\">\r\n      <div class=\"section-header\">\r\n        <h3>Order Management</h3>\r\n        <button class=\"btn-refresh\" @click=\"fetchOrders\">Refresh</button>\r\n      </div>\r\n\r\n      <div v-if=\"loading\" class=\"loading-state\">\r\n        <div class=\"spinner\"></div>\r\n        <p>Loading orders...</p>\r\n      </div>\r\n\r\n      <div v-else-if=\"orders.length === 0\" class=\"empty-state\">\r\n        <p>No orders found.</p>\r\n      </div>\r\n\r\n      <div v-else class=\"orders-table-wrapper\">\r\n        <table class=\"data-table\">\r\n          <thead>\r\n            <tr>\r\n              <th>Order ID</th>\r\n              <th>User Details</th>\r\n              <th>Products</th>\r\n              <th>Total Amount</th>\r\n              <th>Status</th>\r\n              <th>Date</th>\r\n              <th>Actions</th>\r\n            </tr>\r\n          </thead>\r\n          <tbody>\r\n            <tr v-for=\"order in orders\" :key=\"order._id\">\r\n              <td>#{{ order._id.slice(-6) }}</td>\r\n              <td>\r\n                <div class=\"user-info\">\r\n                  <strong>{{ order.user?.name || 'N/A' }}</strong>\r\n                  <span>Merchant: {{ order.user?.storeName || 'N/A' }}</span>\r\n                  <small>Phone: {{ order.user?.phone || 'N/A' }}</small>\r\n                  <small>Address: {{ order.user?.storeAddress || 'N/A' }}</small>\r\n                  <small>Pincode: {{ order.user?.pincode || 'N/A' }}</small>\r\n                </div>\r\n              </td>\r\n              <td>\r\n                <div class=\"products-list\">\r\n                  <div v-for=\"item in order.items\" :key=\"item._id\" class=\"product-item\">\r\n                    {{ item.product?.name || 'N/A' }} (x{{ item.quantity }})\r\n                  </div>\r\n                </div>\r\n              </td>\r\n              <td>â‚¹{{ order.totalAmount }}</td>\r\n              <td>\r\n                <span class=\"status-badge\" :class=\"order.status\">{{ order.status }}</span>\r\n              </td>\r\n              <td>{{ formatDate(order.createdAt) }}</td>\r\n              <td>\r\n                <div class=\"actions\">\r\n                  <select\r\n                    v-model=\"order.status\"\r\n                    @change=\"updateStatus(order._id, order.status)\"\r\n                    class=\"status-select\"\r\n                  >\r\n                    <option value=\"ordered\">Ordered</option>\r\n                    <option value=\"accepted\">Accepted</option>\r\n                    <option value=\"shipped\">Shipped</option>\r\n                    <option value=\"delivered\">Delivered</option>\r\n                    <option value=\"cancelled\">Cancelled</option>\r\n                  </select>\r\n                </div>\r\n              </td>\r\n            </tr>\r\n          </tbody>\r\n        </table>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n  name: 'AdminOrders',\r\n  data() {\r\n    return {\r\n      orders: [],\r\n      loading: false\r\n    };\r\n  },\r\n  mounted() {\r\n    this.fetchOrders();\r\n  },\r\n  methods: {\r\n    async fetchOrders() {\r\n      this.loading = true;\r\n      try {\r\n        const token = localStorage.getItem('token');\r\n        const res = await axios.get('http://localhost:5000/api/orders/admin/all-orders', {\r\n          headers: { Authorization: `Bearer ${token}` }\r\n        });\r\n        this.orders = res.data;\r\n      } catch (err) {\r\n        console.error('Error fetching admin orders:', err);\r\n      } finally {\r\n        this.loading = false;\r\n      }\r\n    },\r\n    async updateStatus(orderId, newStatus) {\r\n      try {\r\n        const token = localStorage.getItem('token');\r\n        await axios.patch(`http://localhost:5000/api/orders/admin/orders/${orderId}/status`, \r\n          { status: newStatus },\r\n          { headers: { Authorization: `Bearer ${token}` } }\r\n        );\r\n        alert('Order status updated successfully');\r\n      } catch (err) {\r\n        console.error('Error updating order status:', err);\r\n        alert('Failed to update status');\r\n      }\r\n    },\r\n    formatDate(date) {\r\n      return new Date(date).toLocaleDateString('en-IN', {\r\n        day: 'numeric',\r\n        month: 'short',\r\n        year: 'numeric'\r\n      });\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.admin-orders-container {\r\n  padding: 20px;\r\n}\r\n\r\n.user-info {\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 2px;\r\n}\r\n\r\n.user-info strong {\r\n  color: #333;\r\n}\r\n\r\n.user-info span {\r\n  font-size: 0.85rem;\r\n  color: #666;\r\n}\r\n\r\n.user-info small {\r\n  font-size: 0.75rem;\r\n  color: #888;\r\n}\r\n\r\n.products-list {\r\n  max-height: 100px;\r\n  overflow-y: auto;\r\n}\r\n\r\n.product-item {\r\n  font-size: 0.85rem;\r\n  margin-bottom: 2px;\r\n}\r\n\r\n.status-badge {\r\n  padding: 4px 8px;\r\n  border-radius: 12px;\r\n  font-size: 0.75rem;\r\n  font-weight: 600;\r\n  text-transform: uppercase;\r\n}\r\n\r\n.status-badge.ordered { background: #e3f2fd; color: #1976d2; }\r\n.status-badge.accepted { background: #f3e5f5; color: #7b1fa2; }\r\n.status-badge.shipped { background: #fff3e0; color: #f57c00; }\r\n.status-badge.delivered { background: #e8f5e9; color: #388e3c; }\r\n.status-badge.cancelled { background: #ffebee; color: #d32f2f; }\r\n\r\n.status-select {\r\n  padding: 4px 8px;\r\n  border-radius: 4px;\r\n  border: 1px solid #ddd;\r\n  font-size: 0.85rem;\r\n}\r\n\r\n.loading-state, .empty-state {\r\n  text-align: center;\r\n  padding: 40px;\r\n  color: #666;\r\n}\r\n\r\n.spinner {\r\n  border: 3px solid #f3f3f3;\r\n  border-top: 3px solid #3498db;\r\n  border-radius: 50%;\r\n  width: 30px;\r\n  height: 30px;\r\n  animation: spin 1s linear infinite;\r\n  margin: 0 auto 10px;\r\n}\r\n\r\n@keyframes spin {\r\n  0% { transform: rotate(0deg); }\r\n  100% { transform: rotate(360deg); }\r\n}\r\n\r\n.btn-refresh {\r\n  background: #3498db;\r\n  color: white;\r\n  border: none;\r\n  padding: 6px 12px;\r\n  border-radius: 4px;\r\n  cursor: pointer;\r\n}\r\n\r\n.btn-refresh:hover {\r\n  background: #2980b9;\r\n}\r\n</style>"],"mappings":"AA8EA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,MAAM,EAAE,EAAE;MACVC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,WAAW,CAAC,CAAC;EACpB,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,WAAWA,CAAA,EAAG;MAClB,IAAI,CAACF,OAAM,GAAI,IAAI;MACnB,IAAI;QACF,MAAMI,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMC,GAAE,GAAI,MAAMX,KAAK,CAACY,GAAG,CAAC,mDAAmD,EAAE;UAC/EC,OAAO,EAAE;YAAEC,aAAa,EAAE,UAAUN,KAAK;UAAG;QAC9C,CAAC,CAAC;QACF,IAAI,CAACL,MAAK,GAAIQ,GAAG,CAACT,IAAI;MACxB,EAAE,OAAOa,GAAG,EAAE;QACZC,OAAO,CAACC,KAAK,CAAC,8BAA8B,EAAEF,GAAG,CAAC;MACpD,UAAU;QACR,IAAI,CAACX,OAAM,GAAI,KAAK;MACtB;IACF,CAAC;IACD,MAAMc,YAAYA,CAACC,OAAO,EAAEC,SAAS,EAAE;MACrC,IAAI;QACF,MAAMZ,KAAI,GAAIC,YAAY,CAACC,OAAO,CAAC,OAAO,CAAC;QAC3C,MAAMV,KAAK,CAACqB,KAAK,CAAC,iDAAiDF,OAAO,SAAS,EACjF;UAAEG,MAAM,EAAEF;QAAU,CAAC,EACrB;UAAEP,OAAO,EAAE;YAAEC,aAAa,EAAE,UAAUN,KAAK;UAAG;QAAE,CAClD,CAAC;QACDe,KAAK,CAAC,mCAAmC,CAAC;MAC5C,EAAE,OAAOR,GAAG,EAAE;QACZC,OAAO,CAACC,KAAK,CAAC,8BAA8B,EAAEF,GAAG,CAAC;QAClDQ,KAAK,CAAC,yBAAyB,CAAC;MAClC;IACF,CAAC;IACDC,UAAUA,CAACC,IAAI,EAAE;MACf,OAAO,IAAIC,IAAI,CAACD,IAAI,CAAC,CAACE,kBAAkB,CAAC,OAAO,EAAE;QAChDC,GAAG,EAAE,SAAS;QACdC,KAAK,EAAE,OAAO;QACdC,IAAI,EAAE;MACR,CAAC,CAAC;IACJ;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}