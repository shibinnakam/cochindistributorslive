.data.staff)) {\n          this.totalStaff = staffRes.data.staff.length;\n          this.activeStaff = staffRes.data.staff.filter(s => s.status === \"active\").length;\n        }\n        if (Array.isArray(leavesRes.data)) {\n          this.pendingLeaves = leavesRes.data.filter(l => l.status === \"Pending\").length;\n          this.approvedLeaves = leavesRes.data.filter(l => l.status === \"Approved\").length;\n        }\n      } catch (error) {\n        console.error(\"Error fetching dashboard stats:\", error);\n      } finally {\n        this.dashboardLoading = false;\n      }\n    },\n    closeAddProductModal() {\n      this.showAddProductModal = false;\n      this.fetchDashboardStats();\n    },\n    closeListProductsModal() {\n      this.showListProductsModal = false;\n      this.fetchDashboardStats();\n    },\n    logout() {\n      localStorage.removeItem(\"token\");\n      localStorage.removeItem(\"user\");\n      this.$router.push(\"/login\");\n    }\n  }\n};","map":{"version":3,"names":["axios","AddProduct","ProductList","ProductCategory","StaffManagement","AdminLeaves","API_BASE_URL","name","components","data","selectedMenu","dashboardLoading","showAddProductModal","showListProductsModal","totalProducts","totalCategories","totalStaff","activeStaff","pendingLeaves","approvedLeaves","totalInventory","mounted","fetchDashboardStats","methods","productsRes","categoriesRes","staffRes","leavesRes","Promise","all","get","success","products","length","reduce","sum","product","quantity","Array","isArray","staff","filter","s","status","l","error","console","closeAddProductModal","closeListProductsModal","logout","localStorage","removeItem","$router","push"],"sources":["C:\\Users\\LENOVO\\Music\\OneDrive\\Pictures\\distribution-agency-project\\frontend\\src\\views\\AdminPage.vue"],"sourcesContent":["<template>\n  <div class=\"admin-wrapper\">\n    <!-- Sidebar -->\n    <aside class=\"sidebar\">\n      <h2 class=\"sidebar-title\">Master Admin</h2>\n      <ul class=\"menu\">\n        <li>\n          <a\n            href=\"#\"\n            @click.prevent=\"selectedMenu = 'dashboard'\"\n            :class=\"{ active: selectedMenu === 'dashboard' }\"\n          >\n            Dashboard\n          </a>\n        </li>\n        <li>\n          <a\n            href=\"#\"\n            @click.prevent=\"showAddProductModal = true\"\n            :class=\"{ active: showAddProductModal }\"\n          >\n            Add Products\n          </a>\n        </li>\n        <li>\n          <a\n            href=\"#\"\n            @click.prevent=\"selectedMenu = 'addCategory'\"\n            :class=\"{ active: selectedMenu === 'addCategory' }\"\n          >\n            Add Category\n          </a>\n        </li>\n        <li>\n          <a\n            href=\"#\"\n            @click.prevent=\"selectedMenu = 'staffManagement'\"\n            :class=\"{ active: selectedMenu === 'staffManagement' }\"\n          >\n            Staff Management\n          </a>\n        </li>\n        <!-- Fixed Approve Leaves -->\n        <li>\n          <a\n            href=\"#\"\n            @click.prevent=\"selectedMenu = 'approve-leaves'\"\n            :class=\"{ active: selectedMenu === 'approve-leaves' }\"\n          >\n            Approve Leaves\n          </a>\n        </li>\n        <li><a href=\"#\">Page Management</a></li>\n        <li>\n          <a\n            href=\"#\"\n            @click.prevent=\"showListProductsModal = true\"\n            :class=\"{ active: showListProductsModal }\"\n          >\n            List Products\n          </a>\n        </li>\n      </ul>\n    </aside>\n\n    <!-- Main -->\n    <div class=\"main\">\n      <!-- Header -->\n      <header class=\"header\">\n        <h1>Dashboard <span class=\"small\">Control panel</span></h1>\n\n        <div class=\"admin-menu\">\n          <span>Laravel Admin ▾</span>\n          <button class=\"logout-btn\" @click=\"logout\">\n            <i class=\"bi bi-box-arrow-right\"></i> Logout\n          </button>\n        </div>\n      </header>\n\n      <!-- Main Content -->\n      <main class=\"content\">\n        <ProductCategory v-if=\"selectedMenu === 'addCategory'\" />\n        <StaffManagement v-if=\"selectedMenu === 'staffManagement'\" />\n        <AdminLeaves v-if=\"selectedMenu === 'approve-leaves'\" />\n\n        <!-- Dashboard Cards -->\n        <template v-if=\"selectedMenu === 'dashboard' || !selectedMenu\">\n          <div v-if=\"dashboardLoading\" class=\"loading-dashboard\">\n            <p>Loading dashboard statistics...</p>\n          </div>\n          <div v-else>\n            <div class=\"card blue\">\n              <h2>{{ totalProducts }}</h2>\n              <p>Total Products</p>\n              <span class=\"info\">View all products →</span>\n            </div>\n            <div class=\"card orange\">\n              <h2>{{ totalCategories }}</h2>\n              <p>Total Categories</p>\n              <span class=\"info\">View all categories →</span>\n            </div>\n            <div class=\"card red\">\n              <h2>{{ totalStaff }}</h2>\n              <p>Total Staff</p>\n              <span class=\"info\">Manage staff →</span>\n            </div>\n            <div class=\"card green\">\n              <h2>{{ activeStaff }}</h2>\n              <p>Active Staff</p>\n              <span class=\"info\">More info →</span>\n            </div>\n            <div class=\"card purple\">\n              <h2>{{ pendingLeaves }}</h2>\n              <p>Pending Leaves</p>\n              <span class=\"info\">Approve leaves →</span>\n            </div>\n            <div class=\"card pink\">\n              <h2>{{ approvedLeaves }}</h2>\n              <p>Approved Leaves</p>\n              <span class=\"info\">More info →</span>\n            </div>\n            <div class=\"card teal\">\n              <h2>{{ totalInventory }}</h2>\n              <p>Total Inventory Items</p>\n              <span class=\"info\">More info →</span>\n            </div>\n          </div>\n        </template>\n      </main>\n    </div>\n\n    <!-- Add Product Modal -->\n    <div\n      v-if=\"showAddProductModal\"\n      class=\"modal-overlay\"\n      @click=\"showAddProductModal = false\"\n    >\n      <div class=\"modal-content\" @click.stop>\n        <div class=\"modal-header\">\n          <h2>Add New Product</h2>\n          <button class=\"modal-close\" @click=\"showAddProductModal = false\">\n            ✕\n          </button>\n        </div>\n        <AddProduct :is-modal=\"true\" @close=\"closeAddProductModal\" />\n      </div>\n    </div>\n\n    <!-- List Products Modal -->\n    <div\n      v-if=\"showListProductsModal\"\n      class=\"modal-overlay-large\"\n      @click=\"showListProductsModal = false\"\n    >\n      <div class=\"modal-content-large\" @click.stop>\n        <div class=\"modal-header\">\n          <h2>Product List</h2>\n          <button class=\"modal-close\" @click=\"showListProductsModal = false\">\n            ✕\n          </button>\n        </div>\n        <ProductList :is-modal=\"true\" @close=\"closeListProductsModal\" />\n      </div>\n    </div>\n  </div>\n</template>\n<script>\nimport axios from \"axios\";\nimport \"@/assets/styles/AdminPage.css\";\nimport AddProduct from \"@/views/AddProduct.vue\";\nimport ProductList from \"@/views/ProductList.vue\";\nimport ProductCategory from \"@/views/AddCategory.vue\";\nimport StaffManagement from \"@/views/StaffManagement.vue\";\nimport AdminLeaves from \"@/views/AdminLeaves.vue\";\n\nconst API_BASE_URL = \"http://localhost:5000/api\";\n\nexport default {\n  name: \"AdminPage\",\n  components: {\n    AddProduct,\n    ProductList,\n    ProductCategory,\n    StaffManagement,\n    AdminLeaves,\n  },\n  data() {\n    return {\n      selectedMenu: \"dashboard\",\n      dashboardLoading: false,\n      showAddProductModal: false,\n      showListProductsModal: false,\n      totalProducts: 0,\n      totalCategories: 0,\n      totalStaff: 0,\n      activeStaff: 0,\n      pendingLeaves: 0,\n      approvedLeaves: 0,\n      totalInventory: 0,\n    };\n  },\n  mounted() {\n    this.fetchDashboardStats();\n  },\n  methods: {\n    async fetchDashboardStats() {\n      this.dashboardLoading = true;\n      try {\n        const [productsRes, categoriesRes, staffRes, leavesRes] =\n          await Promise.all([\n            axios.get(`${API_BASE_URL}/products/getproduct`),\n            axios.get(`${API_BASE_URL}/categories`),\n            axios.get(`${API_BASE_URL}/staff`),\n            axios.get(`${API_BASE_URL}/leaves/all`),\n          ]);\n\n        if (productsRes.data.success && productsRes.data.products) {\n          this.totalProducts = productsRes.data.products.length;\n          this.totalInventory = productsRes.data.products.reduce(\n            (sum, product) => sum + (product.quantity || 0),\n            0\n          );\n        }\n\n        if (Array.isArray(categoriesRes.data)) {\n          this.totalCategories = categoriesRes.data.length;\n        }\n\n        if (staffRes.data.success && Array.isArray(staffRes.data.staff)) {\n          this.totalStaff = staffRes.data.staff.length;\n          this.activeStaff = staffRes.data.staff.filter(\n            (s) => s.status === \"active\"\n          ).length;\n        }\n\n        if (Array.isArray(leavesRes.data)) {\n          this.pendingLeaves = leavesRes.data.filter(\n            (l) => l.status === \"Pending\"\n          ).length;\n          this.approvedLeaves = leavesRes.data.filter(\n            (l) => l.status === \"Approved\"\n          ).length;\n        }\n      } catch (error) {\n        console.error(\"Error fetching dashboard stats:\", error);\n      } finally {\n        this.dashboardLoading = false;\n      }\n    },\n    closeAddProductModal() {\n      this.showAddProductModal = false;\n      this.fetchDashboardStats();\n    },\n    closeListProductsModal() {\n      this.showListProductsModal = false;\n      this.fetchDashboardStats();\n    },\n    logout() {\n      localStorage.removeItem(\"token\");\n      localStorage.removeItem(\"user\");\n      this.$router.push(\"/login\");\n    },\n  },\n};\n</script>\n\n<style scoped>\n.menu a.active {\n  font-weight: 600;\n  color: #ffffff;\n}\n\n.admin-wrapper {\n  background: #f8fafc;\n}\n\n.sidebar {\n  scrollbar-width: thin;\n  scrollbar-color: #475569 #e2e8f0;\n}\n\n.content {\n  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);\n}\n\n.loading-dashboard {\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  min-height: 400px;\n  width: 100%;\n}\n\n.loading-dashboard p {\n  font-size: 18px;\n  color: #64748b;\n  font-weight: 500;\n  animation: pulse 1.5s ease-in-out infinite;\n}\n\n@keyframes pulse {\n  0%,\n  100% {\n    opacity: 0.6;\n  }\n  50% {\n    opacity: 1;\n  }\n}\n\n.modal-overlay {\n  position: fixed;\n  top: 0;\n  left: 0;\n  right: 0;\n  bottom: 0;\n  background: rgba(0, 0, 0, 0.5);\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  z-index: 9999;\n  animation: fadeIn 0.3s ease-in-out;\n}\n\n@keyframes fadeIn {\n  from {\n    opacity: 0;\n  }\n  to {\n    opacity: 1;\n  }\n}\n\n.modal-content {\n  background: white;\n  border-radius: 12px;\n  max-width: 800px;\n  width: 90%;\n  max-height: 85vh;\n  overflow-y: auto;\n  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);\n  animation: slideUp 0.3s ease-in-out;\n}\n\n@keyframes slideUp {\n  from {\n    transform: translateY(50px);\n    opacity: 0;\n  }\n  to {\n    transform: translateY(0);\n    opacity: 1;\n  }\n}\n\n.modal-header {\n  display: flex;\n  justify-content: space-between;\n  align-items: center;\n  padding: 20px;\n  border-bottom: 1px solid #e2e8f0;\n  position: sticky;\n  top: 0;\n  background: white;\n}\n\n.modal-header h2 {\n  margin: 0;\n  font-size: 22px;\n  font-weight: 600;\n  color: #1e293b;\n}\n\n.modal-close {\n  background: none;\n  border: none;\n  font-size: 24px;\n  cursor: pointer;\n  color: #64748b;\n  transition: color 0.2s;\n  padding: 0;\n  width: 32px;\n  height: 32px;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n\n.modal-close:hover {\n  color: #1e293b;\n}\n\n.modal-content :deep(.form-wrapper) {\n  padding: 0;\n  min-height: 0;\n  display: block;\n}\n\n.modal-content :deep(.form-card) {\n  padding: 20px;\n  width: 100%;\n  border-radius: 0;\n  box-shadow: none;\n  background: transparent;\n}\n\n.modal-content :deep(.form-title) {\n  display: none;\n}\n\n.modal-overlay-large {\n  position: fixed;\n  top: 0;\n  left: 0;\n  right: 0;\n  bottom: 0;\n  background: rgba(0, 0, 0, 0.5);\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  z-index: 9999;\n  animation: fadeIn 0.3s ease-in-out;\n}\n\n.modal-content-large {\n  background: white;\n  border-radius: 12px;\n  max-width: 95%;\n  width: 1200px;\n  max-height: 90vh;\n  overflow-y: auto;\n  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);\n  animation: slideUp 0.3s ease-in-out;\n}\n\n.modal-content-large :deep(.product-list-wrapper) {\n  padding: 0;\n}\n\n.modal-content-large :deep(.products-row) {\n  display: grid;\n  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));\n  gap: 16px;\n  padding: 20px;\n  flex-wrap: wrap;\n}\n\n.modal-content-large :deep(.product-card) {\n  min-width: auto;\n  max-width: none;\n}\n</style>\n"],"mappings":";;;;AAuKA,OAAOA,KAAI,MAAO,OAAO;AACzB,OAAO,+BAA+B;AACtC,OAAOC,UAAS,MAAO,wBAAwB;AAC/C,OAAOC,WAAU,MAAO,yBAAyB;AACjD,OAAOC,eAAc,MAAO,yBAAyB;AACrD,OAAOC,eAAc,MAAO,6BAA6B;AACzD,OAAOC,WAAU,MAAO,yBAAyB;AAEjD,MAAMC,YAAW,GAAI,2BAA2B;AAEhD,eAAe;EACbC,IAAI,EAAE,WAAW;EACjBC,UAAU,EAAE;IACVP,UAAU;IACVC,WAAW;IACXC,eAAe;IACfC,eAAe;IACfC;EACF,CAAC;EACDI,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,YAAY,EAAE,WAAW;MACzBC,gBAAgB,EAAE,KAAK;MACvBC,mBAAmB,EAAE,KAAK;MAC1BC,qBAAqB,EAAE,KAAK;MAC5BC,aAAa,EAAE,CAAC;MAChBC,eAAe,EAAE,CAAC;MAClBC,UAAU,EAAE,CAAC;MACbC,WAAW,EAAE,CAAC;MACdC,aAAa,EAAE,CAAC;MAChBC,cAAc,EAAE,CAAC;MACjBC,cAAc,EAAE;IAClB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,mBAAmB,CAAC,CAAC;EAC5B,C